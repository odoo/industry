  <record id="ir_ui_view_3070" model="ir.ui.view">
    <field name="arch" type="xml">
      <t name="Homepage" t-name="website.homepage">
        <t t-call="website.layout">
          <t t-set="pageName" t-value="'homepage'"/>
          <div id="wrap" class="oe_structure">
            <section class="s_intro_pill pt40 o_colored_level pb0" data-snippet="s_intro_pill">
              <div class="container-fluid">
                <div class="row o_grid_mode" data-row-count="11">
                  <div class="o_grid_item oe_img_bg o_grid_item_image g-col-lg-5 g-height-9 col-lg-5 order-lg-0 o_colored_level" style="order: 2; z-index: 1; grid-area: 1 / 1 / 10 / 6; --grid-item-padding-y: 0px; --grid-item-padding-x: 0px;">
                    <img class="img-fluid mx-auto" data-shape="web_editor/geometric_round/geo_round_pill" data-file-name="s_intro_pill_default_image.jpg" src="/web_editor/image_shape/vineyard.ir_attachment_13/web_editor/geometric_round/geo_round_pill.svg" alt="" loading="lazy" data-format-mimetype="image/jpeg"/>
                  </div>
                  <div class="o_grid_item g-col-lg-8 order-lg-0 o_colored_level g-height-9 col-lg-8" data-name="Box" style="order: 1; z-index: 3; grid-area: 1 / 3 / 10 / 11; --grid-item-padding-y: 120px;">
                    <h1 class="display-3" style="text-align: center;">
        Chat'odoo&amp;nbsp;<br/></h1>
                    <p>
                      <br/>
                    </p>
                    <p style="text-align: center;">
                      <a class="btn btn-lg btn-primary o_translate_inline" href="/appointment">Explore our vineyard</a>
                    </p>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-col-lg-5 g-height-10 d-none d-lg-block col-lg-5 order-lg-0 o_colored_level" style="order: 3; z-index: 2; grid-area: 2 / 8 / 12 / 13; --grid-item-padding-y: 0px; --grid-item-padding-x: 0px;">
                    <img class="img-fluid mx-auto" data-shape="web_editor/geometric_round/geo_round_pill" data-file-name="s_intro_pill_default_image_2.jpg" src="/web_editor/image_shape/vineyard.ir_attachment_12/web_editor/geometric_round/geo_round_pill.svg" alt="" loading="lazy" data-format-mimetype="image/jpeg"/>
                  </div>
                </div>
              </div>
            </section>
            <section class="s_masonry_block pt48 pb48 o_colored_level" data-vcss="001" data-vxml="001" data-snippet="s_masonry_block_mosaic_template">
              <div class="container">
                <div class="row o_grid_mode" data-row-count="10" style="gap: 16px;">
                  <div class="o_grid_item o_cc o_cc3 g-height-3 g-col-lg-3 col-lg-3 justify-content-start order-lg-0 rounded-3 o_colored_level" data-name="Block" style="order: 1; z-index: 1; --grid-item-padding-y: 20px; --grid-item-padding-x: 20px; grid-area: 1 / 1 / 4 / 4; linear-gradient(135deg, var(--o-color-4) -400%, var(--o-color-2) 100%);">
                    <h3>Innovation in winemaking</h3>
                    <p>Where Tradition Meets Innovation</p>
                  </div>
                  <div class="o_grid_item o_cc o_cc2 g-height-3 g-col-lg-3 col-lg-3 justify-content-start order-lg-0 rounded-3 o_colored_level" data-name="Block" style="order: 2; z-index: 2; --grid-item-padding-y: 20px; --grid-item-padding-x: 20px; grid-area: 1 / 4 / 4 / 7;">
                    <h3>Focus</h3>
                    <p>Crafting Exceptional Wines</p>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-height-7 g-col-lg-6 col-lg-6 rounded-3 text-center order-lg-0 o_colored_level" data-name="Block" style="order: 0; z-index: 3; grid-area: 1 / 7 / 8 / 13;">
                    <img src="/web/image/vineyard.ir_attachment_19" class="img img-fluid mx-auto rounded" alt="" loading="lazy"/>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-height-7 g-col-lg-6 col-lg-6 rounded-3 text-center order-lg-0 o_colored_level" data-name="Block" style="order: 3; z-index: 4; grid-area: 4 / 1 / 11 / 7;">
                    <img src="/web/image/vineyard.ir_attachment_17" class="img img-fluid mx-auto rounded" alt="" loading="lazy"/>
                  </div>
                  <div class="o_grid_item o_cc o_cc2 g-height-3 g-col-lg-3 col-lg-3 justify-content-center text-center order-lg-0 rounded-3 o_colored_level" data-name="Block" style="order: 4; z-index: 5; --grid-item-padding-y: 20px; --grid-item-padding-x: 20px; grid-area: 8 / 7 / 11 / 10;">
                    <h3 class="display-1-fs">22%</h3>
                    <p>Reaching new heights in winemaking</p>
                  </div>
                  <div class="o_grid_item o_cc o_cc4 g-height-3 g-col-lg-3 col-lg-3 justify-content-center text-center order-lg-0 rounded-3 o_colored_level" data-name="Block" style="order: 5; z-index: 6; --grid-item-padding-y: 20px; --grid-item-padding-x: 20px; grid-area: 8 / 10 / 11 / 13; linear-gradient(135deg, var(--o-color-4) -400%, var(--o-color-1) 100%);">
                    <h3 class="display-1-fs">+12</h3>
                    <p>Experience the difference</p>
                  </div>
                </div>
              </div>
            </section>
            <section class="s_features_wall pt56 o_colored_level pb32" data-snippet="s_features_wall">
              <div class="container">
                <div class="row o_grid_mode" data-row-count="15">
                  <div class="o_grid_item o_colored_level g-height-4 g-col-lg-12 col-lg-12" style="z-index: 1; grid-area: 1 / 1 / 5 / 13; --grid-item-padding-y: 0px; --grid-item-padding-x: 16px;">
                    <h2 class="display-3-fs">Our Grape&amp;nbsp;Collections</h2>
                    <p class="lead">For generations, our family has tended the vines with passion and precision, selecting only the finest grape varieties to craft wines of character and distinction. Among them, <strong>Malbec</strong>, <strong>Cabernet Franc</strong>, and <strong>Syrah</strong> have earned their place in our cellar — each chosen for its unique expression of flavor, aroma, and balance. Together, they form the foundation of our blends, harmonizing richness, elegance, and spice into wines that speak of both our terroir and our heritage.</p>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-height-6 g-col-lg-3 col-lg-3 o_colored_level" style="z-index: 4; --grid-item-padding-y: 0px; --grid-item-padding-x: 16px; grid-area: 5 / 3 / 11 / 6;">
                    <img class="img img-fluid rounded-circle" src="/web/image/vineyard.ir_attachment_18" alt="" loading="lazy"/>
                  </div>
                  <div class="o_grid_item g-col-lg-3 s_col_no_bgcolor g-height-4 col-lg-3" style="z-index: 5; --grid-item-padding-y: 16px; --grid-item-padding-x: 16px; grid-area: 12 / 3 / 16 / 6;">
                    <h3 class="h5-fs">
        Malbec&amp;nbsp;<br/></h3>
                    <p>Deep purple with aromas of blackberry, plum, and cocoa. On the palate, velvety and full-bodied, with rich dark fruit, subtle spice, and a smooth, lingering finish. Adds depth and plush texture to blends.</p>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-height-6 g-col-lg-3 col-lg-3 o_colored_level" style="z-index: 2; --grid-item-padding-y: 0px; --grid-item-padding-x: 16px; grid-area: 5 / 6 / 11 / 9;">
                    <img class="img img-fluid rounded-circle" src="/web/image/vineyard.ir_attachment_14" alt="" loading="lazy"/>
                  </div>
                  <div class="o_grid_item g-height-4 g-col-lg-3 col-lg-3 s_col_no_bgcolor" style="z-index: 3; --grid-item-padding-y: 16px; --grid-item-padding-x: 16px; grid-area: 12 / 6 / 16 / 9;">
                    <h3 class="h5-fs">
        Cabernet Franc&amp;nbsp;</h3>
                    <p>
        Bright ruby hue with scents of raspberry, violet, and gentle herbs. Fresh and elegant in the mouth, offering red currant, floral notes, and fine tannins. Brings freshness, structure, and aromatic lift.&amp;nbsp;</p>
                  </div>
                  <div class="o_grid_item o_grid_item_image g-height-6 g-col-lg-3 col-lg-3 o_colored_level" style="z-index: 6; --grid-item-padding-y: 0px; --grid-item-padding-x: 16px; grid-area: 5 / 9 / 11 / 12;">
                    <img class="img img-fluid rounded-circle" src="/web/image/vineyard.ir_attachment_16" alt="" loading="lazy"/>
                  </div>
                  <div class="o_grid_item g-height-4 g-col-lg-3 col-lg-3 s_col_no_bgcolor" style="z-index: 7; --grid-item-padding-y: 16px; --grid-item-padding-x: 16px; grid-area: 12 / 9 / 16 / 12;">
                    <h3 class="h5-fs">
        Syrah&amp;nbsp;</h3>
                    <p>
        Dark and expressive, showing blackberry, blueberry, and cracked pepper. Rich yet balanced, with hints of smoke, spice, and chocolate. Contributes bold flavor, firm tannins, and a long, warming finish.&amp;nbsp;</p>
                  </div>
                </div>
              </div>
            </section>
            <section data-snippet="s_dynamic_snippet_products" class="s_dynamic_snippet_products oe_website_sale s_dynamic s_dynamic_empty pt32 pb32 s_product_product_borderless_1 o_colored_level" data-custom-template-data="{}" data-name="Products" data-product-category-id="all" data-show-variants="true" data-number-of-records="16" data-filter-id="2" data-template-key="website_sale.dynamic_filter_template_product_product_products_item" data-carousel-interval="5000">
              <div class="container">
                <div class="row s_nb_column_fixed">
                  <section class="s_dynamic_snippet_title oe_unremovable oe_unmovable d-flex flex-column flex-md-row justify-content-between mb-lg-0 pb-3 pb-md-0 o_colored_level">
                    <div>
                      <h2 class="display-3-fs">Our Wine Collection</h2>
                      <p class="lead">At the heart of our craft lies a meticulous care for every step of winemaking. From selecting the finest grape must to the delicate blending process, we ensure that each bottle reflects excellence and dedication. Every sip tells the story of passion, precision, and the art of transforming exceptional grapes into extraordinary wine.</p>
                    </div>
                    <div>
                      <a title="See All" href="/shop">See all<span class="fa fa-long-arrow-right ms-2"/></a>
                    </div>
                  </section>
                  <section class="s_dynamic_snippet_content oe_unremovable oe_unmovable o_not_editable col o_colored_level">
                    <div class="css_non_editable_mode_hidden">
                      <div class="missing_option_warning alert alert-info fade show d-none d-print-none rounded-0">
                                Your Dynamic Snippet will be displayed here... This message is displayed because you did not provide both a filter and a template to use.<br/>
                            </div>
                    </div>
                    <div class="dynamic_snippet_template"/>
                  </section>
                </div>
              </div>
            </section>
            <section class="s_call_to_action o_cc o_cc5 o_colored_level pb0 pt56" data-snippet="s_call_to_action">
              <div class="container">
                <div class="row">
                  <div class="col-lg-12 text-center o_colored_level">
                    <h2>Wine without&amp;nbsp;passion is dull</h2>
                    <p class="lead">
        Join us and savor the joy of fine wine.
    </p>
                  </div>
                  <div class="col-lg-12 o_colored_level">
                    <p style="text-align: center">
                      <a class="btn btn-primary btn-lg o_translate_inline" href="/appointment">Book a Tour</a>
                    </p>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </t>
      </t>
    </field>
    <field name="key">vineyard.homepage</field>
    <field name="name">Home</field>
    <field name="type">qweb</field>
    <field name="website_id" ref="website.default_website"/>
  </record>
