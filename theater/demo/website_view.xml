            <section class="s_striped o_cc o_cc5 pb0 o_colored_level pt0" style="position: relative;" data-oe-shape-data="{'shape':'web_editor/Connections/20','colors':{'c5': 'o-color-4'},'flip':[], 'showOnMobile':true}" data-snippet="s_striped">
