<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="ir_ui_view_3897" model="ir.ui.view">
    <field name="inherit_id" ref="website.placeholder_header_call_to_action" />
    <field name="key">website.header_call_to_action</field>
    <field name="mode">extension</field>
    <field name="name">Header Call to Action</field>
    <field name="type">qweb</field>
    <field name="website_id" ref="website.default_website" />
    <field name="arch" type="xml">
      <data inherit_id="website.placeholder_header_call_to_action" name="Header Call to Action"
        active="True">
        <xpath expr="." position="inside">
          <li t-attf-class="#{_item_class}">
            <div t-attf-class="oe_structure oe_structure_solo #{_div_class}"
              class="oe_structure oe_structure_solo">
              <section class="oe_unremovable oe_unmovable s_text_block o_colored_level"
                data-snippet="s_text_block" data-name="Text">
                <div class="container">
                  <a href="/event" class="oe_unremovable btn btn-primary btn_cta">Next Events</a>
                </div>
              </section>
            </div>
          </li>
        </xpath>
      </data>
    </field>
  </record>
  <record id="ir_ui_view_3902" model="ir.ui.view">
    <field name="inherit_id" ref="website.layout" />
    <field name="key">website.template_footer_headline</field>
    <field name="mode">extension</field>
    <field name="name">Headline</field>
    <field name="type">qweb</field>
    <field name="website_id" ref="website.default_website" />
    <field name="arch" type="xml">
      <data inherit_id="website.layout" name="Headline" active="False">
        <xpath expr="//div[@id='footer']" position="replace">
          <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true"
            t-if="not no_footer">
            <section class="s_text_block pt48" data-snippet="s_text_block" data-name="Text">
              <div class="container">
                <div class="row o_grid_mode" data-row-count="5">
                  <div class="o_colored_level o_grid_item g-col-lg-3 g-height-4 col-lg-3"
                    style="grid-area: 1 / 1 / 5 / 4; z-index: 1;">
                    <h4><b>Designed</b><br />for Companies</h4>
                  </div>
                  <div class="o_colored_level o_grid_item g-col-lg-3 g-height-1 col-lg-3"
                    style="grid-area: 4 / 1 / 5 / 4; z-index: 3;">

                  </div>
                  <div class="o_colored_level o_grid_item g-height-4 g-col-lg-12 col-lg-12"
                    style="z-index: 2; grid-area: 2 / 1 / 6 / 13;">
                    <div class="s_social_media o_not_editable text-end no_icon_color"
                      data-snippet="s_social_media" data-name="Social Media">
                      <a href="/website/social/facebook" class="s_social_media_facebook"
                        target="_blank" aria-label="Facebook">
                        <i class="fa fa-1x fa-facebook o_editable_media fa-stack fa-2x" />
                      </a>
                      <a href="/website/social/twitter" class="s_social_media_twitter"
                        target="_blank" aria-label="X">
                        <i class="fa fa-1x fa-twitter o_editable_media fa-stack fa-2x" />
                      </a>
                      <a href="/website/social/instagram" class="s_social_media_instagram"
                        target="_blank" aria-label="Instagram">
                        <i class="fa fa-1x fa-instagram o_editable_media fa-stack fa-2x" />
                      </a>
                      <h5 class="s_social_media_title d-none">Follow Us</h5>
                    </div>
                    <p class="lead">We are a team of passionate people whose goal is to improve
                      everyone's life.<br />Our services are designed for small to medium size
                      companies.</p>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </xpath>
      </data>
    </field>
  </record>
  <record id="homepage" model="ir.ui.view">
    <field name="key">theater.homepage</field>
    <field name="name">Home</field>
    <field name="type">qweb</field>
    <field name="website_id" ref="website.default_website" />
    <field name="arch" type="xml">
      <t name="Homepage" t-name="website.homepage">
        <t t-call="website.layout">
          <t t-set="pageName" t-value="'homepage'" />
          <div id="wrap" class="oe_structure">
            <section class="s_banner o_cc o_cc5 o_colored_level" data-snippet="s_banner">
              <div class="container-fluid">
                <div class="row o_grid_mode" data-row-count="21">
                  <div class="o_grid_item col-lg-10 g-col-lg-10 g-height-6 o_colored_level"
                    data-name="Box" style="grid-area: 8 / 2 / 14 / 12;z-index: 3">
                    <h1 class="display-1" style="text-align: center;">Generation<br />Performing
                      Arts Theater.</h1>
                    <p>
                    </p>
                  </div>
                  <div
                    class="o_grid_item o_grid_item_image o_colored_level d-lg-block d-none o_snippet_mobile_invisible g-col-lg-4 g-height-17 col-lg-4"
                    style="--grid-item-padding-x: 0px; --grid-item-padding-y: 0px; grid-area: 5 / 9 / 22 / 13; z-index: 2;"
                    data-invisible="1">
                    <img src="/web/image/theater.ir_attachment_1120"
                      alt="standing woman covering her mouth with her right hand"
                      data-attachment-id="1120" class="img img-fluid mx-auto o_we_custom_image"
                      loading="lazy" />
                  </div>
                  <div
                    class="o_grid_item o_grid_item_image o_colored_level g-height-16 g-col-lg-4 col-lg-4"
                    style="z-index: 2; --grid-item-padding-x: 0px; --grid-item-padding-y: 0px; grid-area: 2 / 2 / 18 / 6;">
                    <img src="/web/image/theater.ir_attachment_1119"
                      alt="man in white dress shirt singing" data-attachment-id="1119"
                      class="img img-fluid mx-auto o_we_custom_image" loading="lazy" />
                  </div>
                </div>
              </div>
            </section>
            <section class="s_text_block pb40 o_cc o_cc5 o_colored_level pt32"
              data-snippet="s_text_block">
              <div class="container">
                <div class="row">
                  <div class="col-lg-10 offset-lg-2 pb16 o_colored_level">
                    <p class="o_small">⎯ OUR MISSION</p>
                  </div>
                  <div class="col-lg-10 offset-lg-2 pb16 o_colored_level">
                    <h2>Artistic expression<br />meeting community engagement</h2>
                  </div>
                  <div class="col-lg-4 offset-lg-2 o_colored_level">
                    <p>
                      Artistry and passion come together in our performing arts theater, where every
                      show captivates and inspires. Our commitment is to present performances that
                      resonate with audiences, enriching their lives through the transformative
                      power of the arts. Each production reflects our dedication to creativity and
                      excellence, making every visit a memorable experience.
                    </p>
                  </div>
                  <div class="col-lg-4 offset-lg-1 o_colored_level">
                    <p>
                      With a passion for the arts, we strive to create a platform for diverse
                      performances that inspire and entertain. Our focus is on showcasing talent
                      while fostering a love for the performing arts in our community.
                    </p>
                  </div>
                </div>
              </div>
            </section>
            <section class="s_striped o_cc o_cc5 pb0 o_colored_level pt0"
              style="position: relative;"
              data-oe-shape-data="{'shape':'web_editor/Connections/20','colors':{'c5': 'o-color-4'},'flip':[], 'showOnMobile':true}"
              data-snippet="s_striped">
              <div class="o_we_shape o_web_editor_Connections_20 o_shape_show_mobile"
                style="background-image: url('/web_editor/shape/web_editor/Connections/20.svg?c5=o-color-4'); background-position: 50% 100%;">
                <br />
              </div>
              <div class="container">
                <p>
                  <br />
                </p>
                <div class="row o_grid_mode" data-row-count="14">
                  <div
                    class="col-lg-8 offset-lg-2 o_grid_item o_grid_item_image g-col-lg-8 g-height-12 o_colored_level"
                    style="grid-area: 3 / 1 / 15 / 9;--grid-item-padding-y: 0px;--grid-item-padding-x: 0px">
                    <img src="/web/image/theater.ir_attachment_1121"
                      alt="man in dress shirt playing trumpet" data-attachment-id="1121"
                      class="img img-fluid o_we_custom_image" style="width: 100% !important;"
                      loading="lazy" />
                  </div>
                </div>
              </div>
            </section>
            <section class="s_text_block pb40 o_cc pt112 o_colored_level o_cc1"
              data-snippet="s_text_block">
              <div class="container">
                <div class="row">
                  <div class="col-lg-10 offset-lg-2 pb16 o_colored_level">
                    <p class="o_small">⎯&amp;nbsp;OUR VISION</p>
                  </div>
                  <div class="col-lg-10 offset-lg-2 pb16 o_colored_level">
                    <h2>Inspiring Creativity,&amp;nbsp;</h2>
                    <h2>Connecting Communities</h2>
                  </div>
                  <div class="col-lg-4 offset-lg-2 o_colored_level">
                    <p>
                      At the heart of our theater lies a commitment to nurturing creativity and
                      building a thriving cultural community. We envision a space where artists of
                      all disciplines can experiment, collaborate, and grow — fostering innovation
                      and pushing the boundaries of performance art.</p>
                    <p>We believe that the performing arts play a crucial role in reflecting
                      society’s diversity and sparking meaningful conversations. By prioritizing
                      inclusivity and accessibility, we aim to break down barriers and invite
                      everyone to share in the joy and power of live storytelling.&amp;nbsp;</p>
                  </div>
                  <div class="col-lg-4 offset-lg-1 o_colored_level">
                    <p>
                      Our venue is designed not only as a stage but also as a gathering place —
                      hosting festivals, artist residencies, and special events that bring people
                      together and celebrate the richness of human experience.</p>
                    <p>Through partnerships with schools, local organizations, and artists, we
                      actively contribute to cultural education and community development, ensuring
                      that the arts remain a vital and inspiring part of everyday life.&amp;nbsp;</p>
                  </div>
                </div>
              </div>
            </section>
            <section class="s_floating_blocks o_cc o_colored_level o_cc1 pt88 pb64"
              data-snippet="s_floating_blocks" data-name="Floating Cards"
              style="position: relative;">
              <div class="container">
                <div class="d-flex flex-column gap-5">
                  <div
                    class="s_floating_blocks_wrapper s_floating_blocks_wrapper_shadow d-contents rounded-0">
                    <section data-name="Card"
                      class="s_floating_blocks_block s_col_no_resize position-sticky parallax py-5 py-lg-0 d-flex o_cc o_cc5 o_colored_level"
                      data-scroll-background-ratio="-2">
                      <span
                        class="s_parallax_bg oe_img_bg o_bg_img_center o_bg_img_origin_border_box"
                        style="background-image: url('/web/image/theater.ir_attachment_1122'); background-position: center top;"
                        data-attachment-id="1122" />
                      <div class="o_we_bg_filter bg-black-25">
                        <br />
                      </div>
                      <div class="container-fluid align-self-start align-self-lg-center">
                        <div
                          class="s_floating_blocks_block_grid oe_unremovable row mx-0 o_grid_mode"
                          data-row-count="5">
                          <div class="o_grid_item g-col-lg-8 o_colored_level g-height-3 col-lg-8"
                            style="z-index: 1; grid-area: 1 / 1 / 4 / 9;">
                            <p class="lead">A breathtaking performance</p>
                            <h2 class="display-4-fs">Shadows of Verona</h2>
                          </div>
                          <div class="o_grid_item g-col-lg-2 o_colored_level g-height-2 col-lg-2"
                            style="z-index: 2; grid-area: 4 / 1 / 6 / 3;">
                            <a t-att-href="'/event/' + str(env.ref('theater.event_event_1').id)" class="mb-2 btn btn-fill-primary">Get your tickets</a>
                          </div>
                        </div>
                      </div>
                    </section>
                    <section data-name="Card"
                      class="s_floating_blocks_block s_col_no_resize position-sticky parallax py-5 py-lg-0 d-flex o_cc o_cc5 o_colored_level"
                      data-scroll-background-ratio="-2"
                      style="opacity: 1; top: 79px; transform: scale3d(0.98, 0.98, 0.98);">
                      <span
                        class="s_parallax_bg oe_img_bg o_bg_img_center o_bg_img_origin_border_box"
                        style="background-image: url('/web/image/theater.ir_attachment_1123'); background-position: center top;"
                        data-attachment-id="1123" />
                      <div class="o_we_bg_filter bg-black-25">
                        <br />
                      </div>
                      <div class="container-fluid align-self-start align-self-lg-center">
                        <div
                          class="s_floating_blocks_block_grid oe_unremovable row mx-0 o_grid_mode"
                          data-row-count="6">
                          <div class="o_grid_item g-col-lg-8 g-height-3 col-lg-8 o_colored_level"
                            style="z-index: 1; grid-area: 1 / 1 / 4 / 9;">
                            <p class="lead">Get ready to dance</p>
                            <h2 class="display-4-fs">The Curious Case of Lord Patterwick</h2>
                          </div>
                          <div class="o_grid_item g-col-lg-2 g-height-2 col-lg-2 o_colored_level"
                            style="z-index: 2; grid-area: 5 / 1 / 7 / 3;">
                            <a t-att-href="'/event/' + str(env.ref('theater.event_event_2').id)"
                              class="mb-2 btn btn-fill-primary">Get your tickets</a>
                          </div>
                        </div>
                      </div>
                    </section>
                    <section data-name="Card"
                      class="s_floating_blocks_block s_col_no_resize position-sticky parallax py-5 py-lg-0 d-flex o_cc o_cc5 o_colored_level"
                      data-scroll-background-ratio="-2" style="opacity: 1;">
                      <span
                        class="s_parallax_bg oe_img_bg o_bg_img_center o_bg_img_origin_border_box"
                        style="background-image: url('/web/image/theater.ir_attachment_1124'); background-position: 50% 0%;"
                        data-attachment-id="1124" />
                      <div class="o_we_bg_filter bg-black-25">
                        <br />
                      </div>
                      <div class="container-fluid align-self-start align-self-lg-center">
                        <div
                          class="s_floating_blocks_block_grid oe_unremovable row mx-0 o_grid_mode"
                          data-row-count="5">
                          <div class="o_grid_item g-col-lg-8 g-height-3 col-lg-8 o_colored_level"
                            style="z-index: 1; grid-area: 1 / 1 / 4 / 9;">
                            <p class="lead">Guaranteed emotions</p>
                            <h2 class="display-4-fs">The People Upstairs</h2>
                          </div>
                          <div class="o_grid_item g-col-lg-2 g-height-2 col-lg-2 o_colored_level"
                            style="z-index: 2; grid-area: 4 / 1 / 6 / 3;">
                            <a t-att-href="'/event/' + str(env.ref('theater.event_event_3').id)" class="mb-2 btn btn-fill-primary">Get your tickets</a>
                          </div>
                        </div>
                      </div>
                    </section>
                  </div>
                </div>
              </div>
            </section>
            <section class="s_cta_mobile o_colored_level pt0 pb0" data-snippet="s_cta_mobile"
              data-name="CTA Mobile">
              <div class="container">
                <div class="row o_grid_mode" data-row-count="6">
                  <div
                    class="o_cc o_cc2 o_colored_level g-col-lg-12 o_grid_item g-height-6 col-lg-12"
                    style="z-index: 1; --grid-item-padding-y: 80px; --grid-item-padding-x: 64px; grid-area: 1 / 1 / 7 / 13;">
                    <h3>Stay informed</h3>
                    <p class="lead">Receive our latest news by subscribing to our newsletter.<br /><br /></p>
                    <div data-vxml="001" data-list-id="1" data-name="Newsletter"
                      data-snippet="s_newsletter_subscribe_form"
                      class="s_newsletter_subscribe_form s_newsletter_list js_subscribe">
                      <div class="js_subscribed_wrap d-none">
                        <p class="h4-fs text-center text-success"><i class="fa fa-check-circle-o"
                            role="img" /> Thanks for registering!</p>
                      </div>
                      <div class="js_subscribe_wrap">
                        <div class="input-group">
                          <input type="email" name="email" placeholder="Email Address"
                            class="s_newsletter_subscribe_form_input js_subscribe_value form-control " />
                          <a role="button" href="#"
                            class="js_subscribe_btn o_submit btn btn-primary">Subscribe</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </t>
      </t>
    </field>
  </record>
  <record id="website_sale.header_hide_empty_cart_link" model="ir.ui.view" forcecreate="0">
    <field name="active" eval="True" />
  </record>
  <record id="website.header_search_box" model="ir.ui.view" forcecreate="0">
    <field name="active" eval="False" />
  </record>
  <record id="website_sale.products_attributes" model="ir.ui.view" forcecreate="0">
    <field name="active" eval="False" />
  </record>
  <record id="website_sale.products_attributes_top" model="ir.ui.view" forcecreate="0">
    <field name="active" eval="True" />
  </record>
  <record id="website_sale.filmstrip_categories_pills" model="ir.ui.view" forcecreate="0">
    <field name="active" eval="True" />
  </record>

</odoo>
