<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  
  <function model="ir.module.module" name="_theme_load" context="{'apply_new_theme': True}">
    <value model="ir.module.module" eval="obj().env['ir.module.module'].search([('name', '=', 'theme_loftspace')]).ids"/>
    <value model="ir.module.module" eval="obj().env.ref('website.default_website')"/>
  </function>
  <function model="theme.utils" name="enable_view" eval="['website.template_header_sales_one']"/>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('theater.homepage').arch}"/>
  </function>

  <function name="write" model="ir.ui.view">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=ref('website.default_website')).viewref('website.contactus').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('theater.contactus').arch}"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website_sale.products').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('theater.products').arch}"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().search([('key', '=', 'website.header_text_element')]).ids" />
    <value eval="{'active': False}" />
  </function>

  <function model="web_editor.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/user_values.scss'" />
    <value
      eval="{
            'menu-gradient': 'null',
            'menu-secondary-gradient': 'null',
            'footer-gradient': 'null',
            'copyright-gradient': 'null',
            'o-cc1-bg-gradient': 'null',
            'o-cc2-bg-gradient': 'null',
            'o-cc3-bg-gradient': 'null',
            'o-cc4-bg-gradient': 'null',
            'o-cc5-bg-gradient': 'null',
            'font': 'null',
            'headings-font': &quot;'Montserrat'&quot;,
            'navbar-font': &quot;'Montserrat'&quot;,
            'buttons-font': &quot;'Montserrat'&quot;,
            'color-palettes-number': 'null',
            'color-palettes-name': 'default-1',
            'btn-ripple': 'null',
            'header-template': 'sales_one',
            'footer-template': &quot;'headline'&quot;,
            'footer-scrolltop': 'null',
            'menu-box-shadow': 'none',
            'header-links-style': 'default',
            'google-fonts': &quot;('Open Sans', 'Montserrat')&quot;,
            'google-local-fonts': 'null',
            'uploaded-local-fonts': 'null',
            'btn-border-radius': '0rem',
      }" />
  </function>
  <function model="web_editor.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'" />
    <value eval="{
          'menu': 5,
          'footer': 1,
          'copyright': 'NULL',
          'copyright-custom': 'NULL',
      }" />
  </function>
  <function model="web_editor.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'" />
    <value
      eval="{
          'success': 'null',
          'info': 'null',
          'warning': 'null',
          'danger': 'null',
      }" />
  </function>

  <data noupdate="1">
    <function model="website.menu" name="unlink">
      <value model="website.menu"
        eval="obj().search([
              ('website_id', '=', ref('website.default_website')),
              ('url', '=', '/event'),
          ]).ids" />
    </function>
  </data>

</odoo>
