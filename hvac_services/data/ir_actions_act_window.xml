<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="report_refrigerant_consumption_action" model="ir.actions.act_window">
        <field name="name">Refrigerant Consumption</field>
        <field name="domain">[('x_refrigerant_product','!=',False)]</field>
        <field name="res_model">x_project_task_worksheet_template</field>
        <field name="view_mode">pivot,form</field>
    </record>
    <record id="get_maintenances_action" model="ir.actions.act_window">
        <field name="name">Maintenances</field>
        <field name="context">{'search_default_x_maintained_serials_ids': active_id,'default_x_maintained_serials_ids': [active_id]}</field>
        <field name="domain">[('x_maintained_serials_ids', '=', active_id)]</field>
        <field name="res_model">sale.order</field>
    </record>
    <record id="get_field_services_action" model="ir.actions.act_window">
        <field name="name">Field Services</field>
        <field name="context">{'search_default_x_serials': active_id,'default_x_serials': [active_id]}</field>
        <field name="domain">[('x_serials', '=', active_id)]</field>
        <field name="res_model">project.task</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_actions_get_worksheets" model="ir.actions.act_window">
        <field name="name">Worksheets</field>
        <field name="context">{'edit': False, 'create': False, 'delete': False, 'duplicate': False, 'action_xml_id': 'industry_fsm_report.fsm_worksheets_action_settings', 'worksheet_template_id': 'worksheet_template'}</field>
        <field name="res_model">x_project_task_worksheet_template</field>
    </record>
    <record id="display_stock_lot_view_with_maintenances" model="ir.actions.act_window">
        <field name="name">Stock lot for HVAC</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('partner_ids', 'child_of', active_ids)]</field>
    </record>
</odoo>
