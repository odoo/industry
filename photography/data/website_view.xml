<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="contactus" model="ir.ui.view">
        <field name="name">Contact Us</field>
        <field name="key">photography.contactus</field>
        <field name="active" eval="True"/>
        <field name="type">qweb</field>
        <field name="website_id" ref="website.default_website"/>
        <field name="arch" type="xml">
          <t name="Contact Us" t-name="photography.contactus">
            <t t-call="website.layout">
              <t t-set="logged_partner" t-value="request.env['website.visitor']._get_visitor_from_request().partner_id"/>
              <t t-set="contactus_form_values" t-value="{
                  'tag_ids': request.params.get('tag_ids', ''),
                  'email_to': res_company.email,
                  'name': request.params.get('name', ''),
                  'phone': request.params.get('phone', ''),
                  'email_from': request.params.get('email_from', ''),
                  'company': request.params.get('company', ''),
                  'subject': request.params.get('subject', '')
              }"/>
              <span class="hidden" data-for="contactus_form" t-att-data-values="contactus_form_values"/>
    
              <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title_form o_cc o_cc2 pt64 pb48 o_colored_level" data-snippet="s_title_form" data-name="Title - Form">
                  <div class="o_container_small">
                    <h2 class="text-center">Let's Connect</h2>
                    <p class="text-center lead">
                      Shoot me a message to let me know what you're looking for.
                    </p>
      
                    <section class="s_website_form" data-snippet="s_website_form" data-name="Form">
                      <div class="container">
                        <form id="contactus_form" action="/website/form/" method="post" enctype="multipart/form-data"
                              class="o_mark_required"
                              data-mark="*" data-model_name="crm.lead"
                              data-success-mode="redirect"
                              data-success-page="/contactus-thank-you"
                              data-pre-fill="true">
      
                          <div class="s_website_form_rows row s_col_no_bgcolor">
      
                            <div class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="char">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oy42nnq8ej4">
                                  <span class="s_website_form_label_content">Your Name</span>
                                  <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                  <input type="text" class="form-control s_website_form_input" name="contact_name" required="1" data-fill-with="name" id="oy42nnq8ej4"/>
                                </div>
                              </div>
                            </div>

                            <div class="s_website_form_field mb-3 col-12" data-type="many2many" data-name="Field">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class=" col-sm-auto s_website_form_label " style="width: 200px" for="opb2lkhzpe0a">
                                  <span class="s_website_form_label_content">Type of session</span>
                                </label>
                                <div class="col-sm">
                                  <div class="row s_col_no_resize s_col_no_bgcolor s_website_form_multiple" data-name="tag_ids" data-display="vertical">
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a0" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_wedding').id" data-fill-with="undefined"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a0">Wedding</label>
                                      </div>
                                    </div>
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a1" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_portrait').id"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a1">Personal or Family Portraits</label>
                                      </div>
                                    </div>
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a2" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_baby').id"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a2">Baby portraits</label>
                                      </div>
                                    </div>
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a3" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_pregnancy').id"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a3">Pregnancy</label>
                                      </div>
                                    </div>
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a4" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_pro_event').id"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a4">Professional Event</label>
                                      </div>
                                    </div>
                                    <div class="checkbox col-12 ">
                                      <div class="form-check">
                                        <input type="checkbox" class="s_website_form_input form-check-input" id="opb2lkhzpe0a5" name="tag_ids" t-att-value="request.env.ref('photography.crm_tag_other').id"/>
                                        <label class="form-check-label s_website_form_check_label" for="opb2lkhzpe0a5">Other</label>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
      
                            <div class="s_website_form_field mb-3 col-12" data-type="tel">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oeectok4vmgr">
                                  <span class="s_website_form_label_content">Phone Number</span>
                                </label>
                                <div class="col-sm">
                                  <input type="tel" class="form-control s_website_form_input" name="phone" data-fill-with="phone" id="oeectok4vmgr"/>
                                </div>
                              </div>
                            </div>
      
                            <div class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="email">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ohqikiq5aj2s">
                                  <span class="s_website_form_label_content">Your Email</span>
                                  <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                  <input type="email" class="form-control s_website_form_input" name="email_from" required="1" data-fill-with="email" id="ohqikiq5aj2s"/>
                                </div>
                              </div>
                            </div>
      
                            <div class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="char">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o4u82g6tk19">
                                  <span class="s_website_form_label_content">Interested in...</span>
                                  <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                  <input class="form-control s_website_form_input" type="text" name="name" required="" placeholder="" id="o4u82g6tk19"/>
                                </div>
                              </div>
                            </div>
      
                            <div class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="text">
                              <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="on4qxk6i20h">
                                  <span class="s_website_form_label_content">Your Question</span>
                                  <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                  <textarea class="form-control s_website_form_input" name="description" required="1" placeholder="" id="on4qxk6i20h" rows="5"/>
                                </div>
                              </div>
                            </div>
      
                            <input type="hidden" name="team_id" t-att-value="request.env.ref('sales_team.team_sales_department').id"/>
                            <input type="hidden" name="user_id" t-att-value="request.env.ref('base.user_admin').id"/>
      
                            <div class="mb-0 py-2 col-12 s_website_form_submit text-end s_website_form_no_submit_label" data-name="Submit Button">
                              <div style="width: 200px;" class="s_website_form_label"/>
                              <a href="#" role="button" class="s_website_form_send btn btn-secondary btn-lg">Submit</a>
                              <span id="s_website_form_result"/>
                            </div>
                          </div>
                        </form>
                      </div>
                    </section>
                  </div>
                </section>
              </div>
            </t>
          </t>
        </field>
    </record>
    <function model="ir.model.fields" name="formbuilder_whitelist">
      <value eval="'crm.lead'"/>
      <value eval="['tag_ids']"/>
    </function>
</odoo>
