    <function model="ir.model.fields" name="formbuilder_whitelist">
        <value eval="'crm.lead'"/>
        <value eval="['tag_ids']"/>
    </function>

    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.contactus').id" />
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('photography.contactus').arch.replace(
        'value=&quot;*wedding_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_wedding').id)).replace(
        'value=&quot;*portrait_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_portrait').id)).replace(
        'value=&quot;*baby_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_baby').id)).replace(
        'value=&quot;*pregnancy_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_pregnancy').id)).replace(
        'value=&quot;*pro_event_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_pro_event').id)).replace(
        'value=&quot;*other_tag*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_other').id)).replace(
        'data-visibility-condition=&quot;*crm_tag_pro_event_visibility*&quot;', 'data-visibility-condition=&quot;%s&quot;' % str(obj().env.ref('photography.crm_tag_pro_event').id)).replace(
        'value=&quot;*sales_team_team_sales_department*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('sales_team.team_sales_department').id)).replace(
        'value=&quot;*base_user_admin*&quot;', 'value=&quot;%s&quot;' % str(obj().env.ref('base.user_admin').id))
        }"/>
    </function>
