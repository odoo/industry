  <record id="website_appointment.appointment_card_body" model="ir.ui.view" forcecreate="1">
    <field name="name">appointment_card_body</field>
    <field name="key">website_appointment.appointment_card_body</field>
    <field name="type">qweb</field>
    <field name="arch" type="xml">
      <t t-name="website_appointment.appointment_card_body">
        <div class="card-body d-flex flex-column gap-2">
          <div class="d-flex align-items-start justify-content-between gap-3">
            <h5 class="card-title m-0 text-break" t-field="appointment.name" itemprop="name"/>
          </div>
          <div class="d-flex gap-2 flex-wrap align-items-center">
            <div itemprop="location" class="o_wappointment_card_location d-flex gap-1 fw-bold smaller text-muted text-break">
              <t t-if="appointment.location_id">
                <i class="fa fa-map-marker lh-base" role="presentation"/>
                <span t-field="appointment.location_id" t-options="{'widget': 'contact', 'fields': ['name']}"/>
              </t>
              <t t-else="">
                <i class="fa fa-video-camera lh-base" role="presentation"/>
                <span class="o_not_editable">Online</span>
              </t>
            </div>
          </div>
          <span t-if="not is_html_empty(appointment.message_intro)" class="o_wappointment_message_intro card-text text-muted overflow-hidden" t-field="appointment.message_intro" itemprop="message_intro" placeholder="Add an intro message here..."/>
          <div class="mt-auto">
            <a t-attf-href="/appointment/#{appointment.id}" t-attf-title="Book {{appointment.name}}" role="button" class="btn btn-primary w-100 mt-3 o_not_editable" contenteditable="false">Book now</a>
          </div>
        </div>
      </t>
    </field>
  </record>
  <record id="remove_class" model="ir.ui.view">
    <field name="arch" type="xml">
      <data inherit_id="website.layout">
        <xpath expr="//div[hasclass('o_footer_copyright') and hasclass('o_colored_level') and hasclass('o_cc')]" position="replace">
          <div class="container py-3">
            <div class="row">
                <div class="col-sm text-center text-sm-start text-muted">
                    <span class="o_footer_copyright_name me-2">Copyright &amp;copy; Company name</span>
                </div>
            </div>
          </div>
        </xpath>
      </data>
    </field>
    <field name="inherit_id" ref="website.layout"/>
    <field name="key">photography.footer_copyright_remove_class</field>
    <field name="mode">extension</field>
    <field name="name">footer_copyright_remove_class</field>
    <field name="type">qweb</field>
    <field name="website_id" ref="website.default_website"/>
  </record>
