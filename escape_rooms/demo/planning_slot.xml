<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
  <record id="planning_slot_1" model="planning.slot">
    <field name="company_id" ref="base.main_company"/>
    <field name="sale_line_id" ref="sale_order_line_2"/>
    <field name="start_datetime" model="hr.employee" eval="(DateTime.today().date() + relativedelta(weekday=0, hour=8)).replace(tzinfo=pytz.timezone(obj().env.user.tz or 'UTC')).astimezone(pytz.UTC).replace(tzinfo=None)"/>
    <field name="end_datetime" model="hr.employee" eval="(DateTime.today().date() + relativedelta(weekday=0, hour=17)).replace(tzinfo=pytz.timezone(obj().env.user.tz or 'UTC')).astimezone(pytz.UTC).replace(tzinfo=None)"/>
    <field name="role_id" ref="planning_role_1"/>
  </record>
</odoo>
