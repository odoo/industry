<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="sign_request_2" model="sign.request">
        <field name="template_id" ref="sign_template_2"/>
        <field name="reference">Parental Consent.pdf</field>
        <field name="validity" eval="DateTime.now() + timedelta(days=2)"/>
        <field name="last_reminder" eval="DateTime.now() - relativedelta(days=-2, months=6)"/>
        <field name="state">shared</field>
        <field name="request_item_ids" eval="[
            Command.clear(),
            Command.create({
                'partner_id': ref('base_industry_data.res_partner_29'),
                'role_id': ref('sign.sign_item_role_default'),
                'state': 'sent',
                'signing_date': (DateTime.now() - timedelta(days=15)),
            })
        ]"/>
    </record>
</odoo>
