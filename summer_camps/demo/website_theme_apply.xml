<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_kiddo', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

    <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
        <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'" />
        <value eval="{
            'menu': 3,
            'footer': 1,
        }"/>
    </function>

    <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
        <value eval="'/website/static/src/scss/options/user_values.scss'" />
        <value eval="{
            'menu-gradient': 'null',
            'menu-secondary-gradient': 'null',
            'footer-gradient': 'null',
            'copyright-gradient': 'null',
            'o-cc1-bg-gradient': 'null',
            'o-cc2-bg-gradient': 'null',
            'o-cc3-bg-gradient': 'null',
            'o-cc4-bg-gradient': 'null',
            'o-cc5-bg-gradient': 'null',
            'font': 'null',
            'headings-font': 'null',
            'navbar-font': 'null',
            'buttons-font': 'null',
            'color-palettes-number': 'null',
            'color-palettes-name': 'default-light-14',
            'btn-ripple': 'null',
            'header-template': 'default',
            'footer-template': 'centered',
            'footer-scrolltop': 'null',
            'header-links-style': 'default',
            'header-text-color': 'var(--o-color-5)',
            'hamburger-position-mobile': 'right',
        }"/>
    </function>

    <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
        <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
        <value eval="{
            'success': 'null',
            'info': 'null',
            'warning': 'null',
            'danger': 'null',
        }"/>
    </function>
        
    <function model="ir.ui.view" name="write">
        <value eval="ref('website_event.opt_events_list_columns')"/>
        <value eval="{'active': False}"/>
    </function>
</odoo>
