<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <function model="event.type" name="write">
        <value model="event.type" eval="ref('event_type_1')"/>
        <value model="event.type" eval="{'question_ids': False}"/>
    </function>    
    <record id="event_question_1" model="event.question">
        <field name="title">Participant's Name</field>
        <field name="question_type">name</field>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_2" model="event.question">
        <field name="title">Parent Email</field>
        <field name="question_type">email</field>
        <field name="once_per_order" eval="True"/>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_3" model="event.question">
        <field name="title">Parent Phone</field>
        <field name="question_type">phone</field>
        <field name="once_per_order" eval="True"/>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_4" model="event.question">
        <field name="title">Dietary restrictions</field>
        <field name="question_type">text_box</field>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_5" model="event.question">
        <field name="title">Allergies or Health Information</field>
        <field name="question_type">text_box</field>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_6" model="event.question">
        <field name="title">Participant Date of Birth</field>
        <field name="question_type">text_box</field>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_7" model="event.question">
        <field name="title">Other preferences</field>
        <field name="question_type">text_box</field>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_8" model="event.question">
        <field name="title">Full Address</field>
        <field name="question_type">text_box</field>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_9" model="event.question">
        <field name="title">Emergency Phone Number</field>
        <field name="question_type">text_box</field>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
    <record id="event_question_10" model="event.question">
        <field name="title">Participant's Gender</field>
        <field name="is_mandatory_answer" eval="True"/>
        <field name="event_type_id" ref="event_type_1"/>
    </record>
</odoo>
