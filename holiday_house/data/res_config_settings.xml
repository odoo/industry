<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_form_view_inherited" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherited.holiday.house</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="active" eval="True"/>
        <field name="inherit_id" ref="booking_engine.res_config_settings_form_view_inherited" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='accomodation']" position="attributes">
                <attribute name="string">Holiday House</attribute>
                <attribute name="logo">/holiday_house/static/description/icon.png</attribute>
            </xpath>
        </field>
    </record>
</odoo>
