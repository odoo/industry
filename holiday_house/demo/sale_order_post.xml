<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <function name="action_confirm" model="sale.order">
        <value eval="[
            ref('sale_order_1'),
            ref('sale_order_2'),
            ref('sale_order_3'),
        ]"/>
    </function>

    <record id="x_guests_line_1" model="x_guests_line">
        <field name="x_sale_order_id" ref="sale_order_1"/>
        <field name="x_guest_partner_id" ref="base_industry_data.res_partner_20"/>
        <field name="x_room_resource_id" model="resource.resource" eval="obj().env.ref('holiday_house.sale_order_1').order_line[:1].x_resource_id.id"/>
    </record>
    <record id="x_guests_line_2" model="x_guests_line">
        <field name="x_sale_order_id" ref="sale_order_2"/>
        <field name="x_guest_partner_id" ref="base_industry_data.res_partner_21"/>
        <field name="x_room_resource_id" model="resource.resource" eval="obj().env.ref('holiday_house.sale_order_2').order_line[:1].x_resource_id.id"/>
    </record>
    <record id="x_guests_line_3" model="x_guests_line">
        <field name="x_sale_order_id" ref="sale_order_3"/>
        <field name="x_guest_partner_id" ref="base_industry_data.res_partner_29"/>
        <field name="x_room_resource_id" model="resource.resource" eval="obj().env.ref('holiday_house.sale_order_3').order_line[:1].x_resource_id.id"/>
    </record>

    <record id="pickup_wizard_1" model="rental.order.wizard">
        <field name="order_id" ref="sale_order_1"/>
        <field name="rental_wizard_line_ids" eval="[(0, 0, {'order_line_id': ref('sale_order_line_1'),'product_id': ref('product_product_13'),'qty_delivered': 1})]"/>
        <field name="status">pickup</field>
    </record>
    <record id="return_wizard_1" model="rental.order.wizard">
        <field name="order_id" ref="sale_order_1"/>
        <field name="rental_wizard_line_ids" eval="[(0, 0, {'order_line_id': ref('sale_order_line_1'),'product_id': ref('product_product_13'),'qty_delivered': 1,'qty_returned': 1})]"/>
        <field name="status">return</field>
    </record>

    <record id="pickup_wizard_2" model="rental.order.wizard">
        <field name="order_id" ref="sale_order_2"/>
        <field name="rental_wizard_line_ids" eval="[(0, 0, {'order_line_id': ref('sale_order_line_2'), 'product_id': ref('product_product_14'), 'qty_delivered': 1})]"/>
        <field name="status">pickup</field>
    </record>

    <record id="pickup_wizard_3" model="rental.order.wizard">
        <field name="order_id" ref="sale_order_3"/>
        <field name="rental_wizard_line_ids" eval="[(0, 0, {'order_line_id': ref('sale_order_line_3'), 'product_id': ref('product_product_12'), 'qty_delivered': 1})]"/>
        <field name="status">pickup</field>
    </record>

    <function name="apply" model="rental.order.wizard">
        <value eval="[
            ref('pickup_wizard_1'),
            ref('return_wizard_1'),
            ref('pickup_wizard_2'),
            ref('pickup_wizard_3'),
        ]"/>
    </function>
    <function name="write" model="sale.order.line">
        <value model="sale.order.line" eval="obj().search([('order_id', '=', ref('sale_order_1')), ('product_id', '=', ref('booking_engine.product_product_city_tax'))], limit=1).id" />
        <value eval="{'qty_delivered': 7}" />
    </function>
    <function name="action_confirm" model="sale.order">
        <value eval="[
            ref('sale_order_4'),
            ref('sale_order_5'),
        ]"/>
    </function>
</odoo>
