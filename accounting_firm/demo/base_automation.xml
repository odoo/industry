        <field name="name">Accounting Firm: Update the tasks</field>
        <field name="model_id" ref="project.model_project_task" />
        <field name="trigger">on_create_or_write</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('sale_project.field_project_task__sale_line_id'), ref('project.field_project_task__stage_id'), ref('project.field_project_task__tag_ids')])]" />
    </record>
    <record id="base_automation_2" model="base.automation">
        <field name="name">Accounting Firm: Update the projects</field>
        <field name="model_id" ref="project.model_project_project" />
        <field name="trigger">on_create_or_write</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('project.field_project_project__stage_id')])]" />
    </record>
</odoo>
