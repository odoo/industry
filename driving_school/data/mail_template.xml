<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
  <record id="mail_template_43" model="mail.template">
    <field name="name">URLs Driving C</field>
    <field name="model_id" ref="base.model_res_partner"/>
    <field name="subject">Your driving lesson booking links</field>
    <field name="body_html"><![CDATA[
        <div style="margin: 0px; padding: 0px;" data-oe-version="2.0">
        Dear <t t-out="object.name or ''" />
        <br />
        <br />
        Please find herein the URLs to book your lessons: <br />
        <a t-att-href="'/appointment/' + str(env.ref('driving_school.appointment_type_1').id)"
            style="
                border-top-width: 0px;
                border-right-width: 0px;
                border-bottom-width: 0px;
                border-left-width: 0px;
                color: #008f8c;
                text-decoration: none;
                border-radius: 0px;
                border-style: none;
                padding: 0px;
                margin: 0px;
                box-sizing: border-box;
                border-width: 0px;
            "
        >
            <font style="color: #008f8c;">Theory lessons A</font>
        </a>
        <br />
        <a t-att-href="'/appointment/' + str(env.ref('driving_school.appointment_type_4').id)"
            style="
                border-top-width: 0px;
                border-right-width: 0px;
                border-bottom-width: 0px;
                border-left-width: 0px;
                color: #008f8c;
                text-decoration: none;
                border-radius: 0px;
                border-style: none;
                padding: 0px;
                margin: 0px;
                box-sizing: border-box;
                border-width: 0px;
            "
        >
            Practical lessons A
        </a>
        <br />
        <br />
        Do not hesitate to contact us if you have any questions.
        <br />
        <br />
        Sincerely,
        <br />
        <t t-out="object._get_followup_responsible().name if is_html_empty(object._get_followup_responsible().signature) else object._get_followup_responsible().signature" />
    </div>
      ]]></field>
  </record>
</odoo>
