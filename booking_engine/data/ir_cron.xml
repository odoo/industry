<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <!-- House Keeping -->
    <record id="ir_cron_room_update" model="ir.cron">
        <field name="name">HouseKeeping: Daily room update</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="datetime.today().date()+relativedelta(days=1)"/>
        <field name="state">code</field>
        <field name="ir_actions_server_id" ref="server_action_update_rooms"/>
    </record>
</odoo>
