<?xml version='1.0' encoding='UTF-8'?>
<odoo>  
  <template id="custom_add_cart_name" inherit_id="website_sale.cta_wrapper">
    <xpath expr="//button[@name='add_to_cart']" position="replace">
      <button name="add_to_cart"
              t-attf-class="btn btn-primary flex-grow-1"
              t-att-data-show-quantity="is_view_active('website_sale.product_quantity')"
              t-att-data-product-category-id="product.public_categ_ids.ids and product.public_categ_ids.ids[0]"
              t-att-data-product-id="product_variant.id"
              t-att-data-product-template-id="product.id"
              t-att-data-product-type="product.type"
              data-animation-selector=".o_wsale_product_images"
      >
        <i class="fa fa-shopping-cart me-2"/>Book
      </button>
    </xpath>
  </template>
  <template id="custom_product_name" inherit_id="website_sale.products">
    <xpath expr="//h1[hasclass('o_wsale_shop_title')]" position="replace">
      <h1 name="custom_product_title_name" class="h4-fs" t-if="not category and not search">All rooms</h1>
    </xpath>
  </template>
  <function model="ir.ui.view" name="write">
    <value eval="[ref('website_sale_renting.shop_rental_datepicker_opt'), ref('website_sale.product_comment')]"/>
    <value eval="{'active': True}" />
  </function>
  <function model="ir.ui.view" name="write">
    <value eval="[ref('website_sale.filter_products_price')]"/>
    <value eval="{'active': False}" />
  </function>
</odoo>
