<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record model="base.automation" id="automation_initialize_sales_order_line_sequence_on_sales_order_create">
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_initialize_sales_order_line_sequence_on_sales_order_create')])]"/>
        <field name="trigger">on_create</field>
        <field name="name">Construction Developer: Initialize Sales Order Line Sequence on Sales Order create</field>
    </record>
    <record model="base.automation" id="automation_update_progress_increment_on_change">
        <field name="name">Construction Developer: Update Sale Order Line Progress Increment on Quantity Increment change</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_sol_update_progress_increment_on_change')])]"/>
        <field name="trigger">on_change</field>
        <field name="on_change_field_ids" eval="[(6, 0, [ref('field_sale_order_line_x_quantity_increment')])]"/>
    </record>
    <record model="base.automation" id="automation_update_quantity_increment_on_change">
        <field name="name">Construction Developer: Update Sale Order Line Quantity Increment on Progress Increment change</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_sol_update_quantity_increment_on_change')])]"/>
        <field name="trigger">on_change</field>
        <field name="on_change_field_ids" eval="[(6, 0, [ref('field_sale_order_line_x_progress_increment')])]"/>
    </record>
    <!-- 
    this is needed in order for the report.project.task.user model to copy the stage
    to filter out tasks which have a stage which is x_is_remark_stage
    to filter out remarks from the task report
    -->
    <record model="base.automation" id="automation_x_remark_write_task_stage_on_create_or_write">
        <field name="name">Construction Developer: Write Remarks Stage</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="trigger">on_create_or_write</field>
        <field name="trigger_field_ids" eval="[(6, 0, [ref('field_x_remark_x_stage_id')])]" />
        <field name="action_server_ids" eval="[(6, 0, [ref('action_x_remark_write_project_stage_on_create_or_write')])]"/>
    </record>
    <record model="base.automation" id="automation_x_remark_generate_x_reference_on_create">
        <field name="name">Construction Developer: Generate Remarks Reference</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="trigger">on_create</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_x_remark_generate_x_reference_on_create')])]"/>
    </record>
</odoo>
