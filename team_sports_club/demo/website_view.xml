  <template inherit_id='website_sale.products' id="products" name="products_view">
    <xpath expr="//div[@id='wrap']" position="before">
      <t t-set="isFilteringByPrice" t-if="opt_wsale_filter_price" t-value="float_round(available_min_price, 2) != float_round(min_price, 2) or float_round(available_max_price, 2) != float_round(max_price, 2)"/>
      <t t-set="hasPricelistDropdown" t-value="website_sale_pricelists and len(website_sale_pricelists)&gt;1"/>
      <t t-set="isSortingBy" t-value="[sort for sort in website_sale_sortable if sort[0]==request.params.get('order', '')]"/>
    </xpath>
    <xpath expr="//h1[hasclass('h4-fs')]" position="replace">
      <h1 class="h4-fs" t-if="not category and not search">Our Fan Shop</h1>
    </xpath>
  </template>
  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('team_sports_club.ir_ui_view_2179').arch}"/>
  </function>
