<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="players_menu_action" model="ir.actions.act_window">
    <field name="domain">[("grade_id.x_type", "=", "Team")]</field>
    <field name="name">Players</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">kanban,list,form,activity</field>
  </record>
  <record id="teams_menu_action" model="ir.actions.act_window">
    <field name="name">Teams</field>
    <field name="res_model">res.partner.grade</field>
  </record>
  <record id="coaches_menu_action" model="ir.actions.act_window">
    <field name="domain">[("grade_id.x_type", "=", "Coach")]</field>
    <field name="name">Coaches</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">list,kanban,form,map,activity</field>
  </record>
  <record id="request_contibution_act_window" model="ir.actions.act_window">
    <field name="binding_model_id" ref="base.model_res_partner"/>
    <field name="context">{"default_x_partner_ids": active_ids}</field>
    <field name="name">Request Contribution</field>
    <field name="res_model">x_contribution</field>
    <field name="target">new</field>
    <field name="view_mode">form</field>
  </record>
</odoo>
