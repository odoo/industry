<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <template id="partners_website_page" inherit_id="website_crm_partner_assign.index">
        <xpath expr="//section/h1" position="replace">
            <h1 class="me-auto mb-0 h4 h2-fs">
                Our Players
            </h1>
        </xpath>
        <xpath expr="//section/div[2]/button" position="replace">
        </xpath>
        <xpath expr="//t[@t-foreach='partners']/t/h2" position="replace">
            <h2 class="mt-3 mb-2 col-12 h5-fs">
                <span t-field="partner.grade_id"/>
                <t t-call="website.publish_management">
                    <t t-set="object" t-value="partner.grade_id"/>
                    <t t-set="publish_edit" t-value="True"/>
                    <t t-set="action" t-value="'partnership.res_partner_grade_action'"/>
                </t>
            </h2>
        </xpath>
    </template>
    <template id="partner_detail_website_page" inherit_id="website_crm_partner_assign.partner">
        <xpath expr="//div/a" position="replace">
            <a t-attf-href="/partners#{current_grade and '/grade/%s' % slug(current_grade)}"><i class="oi oi-chevron-left me-2"/>Back</a>
        </xpath>
    </template>
</odoo>
