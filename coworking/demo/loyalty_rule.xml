<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
  <record id="loyalty.gift_card_program_rule" model="loyalty.rule" forcecreate="1">
    <field name="program_id" ref="loyalty.gift_card_program"/>
    <field name="product_ids" eval="[(6, 0, [ref('loyalty.gift_card_product_50')])]"/>
    <field name="reward_point_split" eval="True"/>
    <field name="reward_point_mode">money</field>
  </record>
  <record id="loyalty_rule_2" model="loyalty.rule">
    <field name="program_id" ref="loyalty_program_2"/>
    <field name="product_ids" eval="[(6, 0, [ref('product_product_10')])]"/>
    <field name="reward_point_amount">10.0</field>
    <field name="reward_point_mode">unit</field>
    <field name="minimum_qty" eval="False"/>
  </record>
</odoo>
