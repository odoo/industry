    </record>
    <record id="default_form_view_fo_3a2bf852-f4cd-4cef-ace7-1a4b42ff9aeb" model="ir.ui.view">
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet string="Petition Tags">
                    <div class="oe_title">
                        <h1>
                            <field name="x_name" required="1" placeholder="Name..."/>
