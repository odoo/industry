<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="action_window_petition" model="ir.actions.act_window">
        <field name="name">Petitions</field>
        <field name="res_model">x_petition</field>
        <field name="view_mode">list,form,kanban,graph,pivot</field>
    </record>
    <record id="action_window_petition_tag" model="ir.actions.act_window">
        <field name="name">Petition Tags</field>
        <field name="res_model">x_petition_tag</field>
    </record>
    <record id="action_window_signature" model="ir.actions.act_window">
        <field name="name">Signatures</field>
        <field name="res_model">x_signature</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="context">{'default_x_date': context_today()}</field>
    </record>
    <record id="action_window_fiscal_attestation" model="ir.actions.act_window">
        <field name="name">Fiscal Attestation</field>
        <field name="res_model">x_fiscal_attestation</field>
        <field name="view_mode">list,form,pivot,graph,kanban</field>
    </record>
    <record id="petition_related_x_signature" model="ir.actions.act_window">
        <field name="context">{'search_default_x_petition_id': active_id,'default_x_petition_id': active_id}</field>
        <field name="domain">[('x_petition_id', '=', active_id)]</field>
        <field name="name">Signatures</field>
        <field name="res_model">x_signature</field>
    </record>
    <record id="partner_related_x_signature" model="ir.actions.act_window">
        <field name="context">{'search_default_x_partner_id': active_id,'default_x_partner_id':
            active_id}</field>
        <field name="domain">[('x_partner_id', '=', active_id)]</field>
        <field name="name">Signatures</field>
        <field name="res_model">x_signature</field>
    </record>
    <record id="action_window_donation_payments" model="ir.actions.act_window">
        <field name="domain">[('is_donation', '=', 'true')]</field>
        <field name="name">Donation</field>
        <field name="res_model">account.payment</field>
        <field name="view_mode">list,kanban,form,graph</field>
    </record>
    <record id="fiscal_attestation_related_donations" model="ir.actions.act_window">
        <field name="context">{'search_default_x_fiscal_attestation_id':
            active_id,'default_x_fiscal_attestation_id': active_id}</field>
        <field name="domain">[('x_fiscal_attestation_id', '=', active_id)]</field>
        <field name="name">Donations</field>
        <field name="res_model">account.payment</field>
    </record>
    <record id="donation_related_x_fiscal_attestation_form" model="ir.actions.act_window">
        <field name="domain">[('x_donation_ids', '=', active_id)]</field>
        <field name="name">Fiscal Attestation</field>
        <field name="res_model">x_fiscal_attestation</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': False}</field>
    </record>
    <record id="action_window_x_wizard_generate_fiscal_attestation_form" model="ir.actions.act_window">
        <field name="name">Generate Fiscal Attestation</field>
        <field name="res_model">x_wizard_generate_fiscal_attestation</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_x_wizard_fiscal_year': context_today().year}</field>
    </record>
</odoo>
