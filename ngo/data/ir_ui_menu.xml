        <field name="parent_id" ref="menu_donation_submenu"/>
        <field name="sequence">2</field>
    </record>
    <record id="menu_donation_donation" model="ir.ui.menu">
        <field name="action" ref="action_window_donations"/>
        <field name="name">Donation</field>
        <field name="parent_id" ref="menu_donation_submenu"/>
        <field name="sequence">1</field>
    </record>

    <record id="menu_community_configuration" model="ir.ui.menu">
        <field name="name">Configuration</field>
        <field name="parent_id" ref="menu_community_main_app"/>
        <field name="sequence">4</field>
    </record>
    <record id="menu_community_configuration_petition_submenu" model="ir.ui.menu">
        <field name="name">Petition</field>
        <field name="parent_id" ref="menu_community_configuration"/>
    </record>
    <record id="menu_community_configuration_petition_tags" model="ir.ui.menu">
        <field name="action" ref="action_window_petition_tag"/>
