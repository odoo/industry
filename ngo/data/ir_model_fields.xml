<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <!-- x_petition fields -->
    <record id="x_name_field_x_petition" model="ir.model.fields">
        <field name="ttype">char</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Petition Name</field>
