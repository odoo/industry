    <record id="x_sequence_field_x_signature" model="ir.model.fields">
        <field name="ttype">integer</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Sequence</field>
        <field name="model_id" ref="x_signature_model"/>
        <field name="name">x_sequence</field>
        <field name="on_delete" eval="False"/>
    </record>
    <record id="x_petition_name_field_x_signature" model="ir.model.fields">
        <field name="ttype">char</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Petition Name</field>
        <field name="model_id" ref="x_signature_model"/>
        <field name="name">x_petition_name</field>
        <field name="on_delete" eval="False"/>
        <field name="related">x_petition_id.x_name</field>
        <field name="store" eval="False"/>
        <field name="readonly" eval="1"/>
    </record>
    <record id="x_country_id_field_x_signature" model="ir.model.fields">
        <field name="ttype">many2one</field>
        <field name="relation">res.country</field>
        <field name="related">x_partner_id.country_id</field>
        <field name="field_description">Country</field>
        <field name="model_id" ref="x_signature_model"/>
        <field name="name">x_country_id</field>
        <field name="on_delete" eval="False"/>
        <field name="readonly" eval="True"/>
    </record>
    <record id="x_newsletter_field_x_signature" model="ir.model.fields">
        <field name="ttype">boolean</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Newsletter</field>
        <field name="model_id" ref="x_signature_model"/>
        <field name="name">x_newsletter</field>
        <field name="on_delete" eval="False"/>
    </record>
    <record id="x_date_field_x_signature" model="ir.model.fields">
        <field name="ttype">date</field>
        <field name="field_description">Date Signed</field>
        <field name="model_id" ref="x_signature_model"/>
        <field name="name">x_date</field>
        <field name="on_delete" eval="False"/>
        <field name="readonly" eval="True"/>
    </record>

    <record id="x_current_signatures_field_x_petition" model="ir.model.fields">
        <field name="compute"><![CDATA[
for record in self: record['x_current_signatures'] = self.env['x_signature'].search_count([('x_petition_id', '=', record.id)])
]]></field>
        <field name="ttype">integer</field>
        <field name="field_description">Current Signatures</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_current_signatures</field>
        <field name="store" eval="False"/>
        <field name="readonly" eval="True"/>
    </record>
    <record id="x_progress_field_x_petition" model="ir.model.fields">
        <field name="compute"><![CDATA[
for record in self:
    if record.x_target_signatures > 0:
        record['x_progress'] = record.x_current_signatures/record.x_target_signatures
    else:
        record['x_progress'] = 1.0
]]></field>
        <field name="ttype">float</field>
        <field name="depends">x_current_signatures, x_target_signatures</field>
        <field name="field_description">Progress</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_progress</field>
        <field name="store" eval="False"/>
        <field name="readonly" eval="True"/>
    </record>

    <record id="x_signature_count_field_res_partner" model="ir.model.fields">
        <field name="compute"><![CDATA[
for record in self: record['x_x_partner_id_x_signature_count'] = self.env['x_signature'].search_count([('x_partner_id', '=', record.id)])
]]></field>
        <field name="ttype">integer</field>
        <field name="field_description">Contact count</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="name">x_x_partner_id_x_signature_count</field>
        <field name="on_delete" eval="False"/>
        <field name="selectable" eval="False"/>
        <field name="store" eval="False"/>
    </record>

