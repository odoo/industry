    <record id="x_date_start_field_x_petition" model="ir.model.fields">
        <field name="ttype">datetime</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Start Date</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_date_start</field>
        <field name="on_delete" eval="False"/>
    </record>
    <record id="x_is_published_field_x_petition" model="ir.model.fields">
        <field name="ttype">boolean</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Is Published</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_is_published</field>
    </record>
    <record id="x_website_description_field_x_petition" model="ir.model.fields">
        <field name="ttype">html</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Website Description</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_website_description</field>
    </record>
    <record id="x_website_url_field_x_petition" model="ir.model.fields">
        <field name="compute"><![CDATA[
for record in self: record['x_website_url'] = '/model/petition/'+str(record.env["ir.http"]._slug(record))
]]></field>
        <field name="ttype">char</field>
        <field name="field_description">Website URL</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_website_url</field>
        <field name="on_delete" eval="False"/>
        <field name="store" eval="False"/>
        <field name="readonly" eval="True"/>
    </record>


    <!-- x_signature fields -->
    <record id="x_name_field_x_signature" model="ir.model.fields">
        <field name="ttype">char</field>
