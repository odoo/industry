    <record id="x_image_field_x_petition" model="ir.model.fields">
        <field name="ttype">binary</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Image</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_image</field>
        <field name="on_delete" eval="False"/>
    </record>
    <record id="x_sequence_field_x_petition" model="ir.model.fields">
        <field name="ttype">integer</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Sequence</field>
        <field name="model_id" ref="x_petition_model"/>
        <field name="name">x_sequence</field>
        <field name="on_delete" eval="False"/>
    </record>
    <record id="x_tag_ids_field_x_petition" model="ir.model.fields">
        <field name="ttype">many2many</field>
        <field name="copied" eval="True"/>
        <field name="field_description">Tags</field>
        <field name="model_id" ref="x_petition_model"/>
