<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_orchid', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

  <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
    <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
    <value eval="{
        'success': 'null',
        'info': 'null',
        'warning': 'null',
        'danger': 'null',
    }"/>
  </function>

  <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
    <value eval="'/website/static/src/scss/options/user_values.scss'"/>
    <value eval="{
      'menu-gradient': 'null',
      'menu-secondary-gradient': 'null',
      'footer-gradient': 'null',
      'copyright-gradient': 'null',
      'o-cc1-bg-gradient': 'null',
      'o-cc2-bg-gradient': 'null',
      'o-cc3-bg-gradient': 'null',
      'o-cc4-bg-gradient': 'null',
      'o-cc5-bg-gradient': 'null',
      'font': 'null',
      'headings-font': 'null',
      'navbar-font': 'null',
      'buttons-font': 'null',
      'color-palettes-number': 'null',
      'color-palettes-name': 'default-light-12',
      'btn-ripple': 'null',
      'header-template': 'null',
      'footer-template': 'null',
      'footer-scrolltop': 'null',
    }"/>
  </function>

  <function name="write" model="ir.ui.view">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('yoga_pilates.homepage').arch}"/>
  </function>
  <function name="write" model="ir.ui.view">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=ref('website.default_website')).viewref('website.contactus').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('yoga_pilates.contactus').arch}"/>
  </function>
  <data noupdate="1">
      <function model="website.menu" name="write">
        <value model="website.menu" eval="obj().search([
            ('website_id', '=', ref('website.default_website')),
            ('url', '=', '/appointment'),
        ]).id"/>
        <value eval="{'name': 'Schedule'}"/>
      </function>
      <function model="website.menu" name="write">
        <value model="website.menu" eval="obj().search([
            ('website_id', '=', ref('website.default_website')),
            ('url', '=', '/event'),
        ]).id"/>
        <value eval="{'name': 'Wellbeing Events'}"/>
      </function>
      <function model="website.menu" name="unlink">
        <value model="website.menu" eval="obj().search([
            ('website_id', '=', ref('website.default_website')),
            ('url', '=', '/shop'),
        ]).id"/>
      </function>
  </data>
  <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env.ref('yoga_pilates.ir_ui_view_3322').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('yoga_pilates.ir_ui_view_3322').arch.replace(
        '*the_flow_membership_product*', str(obj().env.ref('yoga_pilates.product_product_5').website_url)).replace(
        '*the_tone_membership_product*', str(obj().env.ref('yoga_pilates.product_product_16').website_url)).replace(
        '*the_balance_membership_product*', str(obj().env.ref('yoga_pilates.product_product_17').website_url)).replace(
        '*5_class_yoga_and_pilates_card_product*', str(obj().env.ref('yoga_pilates.product_product_6').website_url)).replace(
        '*gift_card_product*', str(obj().env.ref('yoga_pilates.product_product_8').website_url))
        }"/>
    </function>
</odoo>
