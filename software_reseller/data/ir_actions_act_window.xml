<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="all_licenses_act_window" model="ir.actions.act_window">
        <field name="name">All Licenses</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">list,kanban,form,calendar,gantt,map,pivot,graph,activity</field>
        <field name="domain">[('project_id', 'ilike','%licenses%')]</field>
    </record>
    <record id="by_software_act_window" model="ir.actions.act_window">
        <field name="name">By Software</field>
        <field name="res_model">project.project</field>
        <field name="view_id" ref="project.view_project_kanban" />
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="project.view_project_project_filter" />
        <field name="domain">[('x_is_license', '=', 'True')]</field>
        <field name="help">
            &lt;p class="o_view_nocontent_smiling_face"&gt;This is where you manage your software licenses.&lt;/p&gt;
        </field>
    </record>
    <record id="licenses_act_window" model="ir.actions.act_window">
        <field name="context">{'search_default_partner_id': active_id,'default_partner_id': active_id}</field>
        <field name="domain">[('partner_id', 'child_of', active_id),('x_is_license','=',True)]</field>
        <field name="name">Licenses</field>
        <field name="view_mode">list</field>
        <field name="res_model">project.task</field>
    </record>
    <record id="to_review_act_window" model="ir.actions.act_window">
        <field name="domain">[('x_is_license','=',True), ('state','in',['02_changes_requested'])]</field>
        <field name="help"><![CDATA[<p class="o_view_nocontent_smiling_face">
                    This is your new action.
                </p>
                <p>By default, it contains a list and a form view and possibly
                    other view types depending on the options you chose for your model.
                </p>
                <p>
                    You can start customizing these screens by clicking on the Studio icon on the
                    top right corner (you can also customize this help message there).
                </p>
            ]]>        </field>
        <field name="name">To Review</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">list,form,pivot,graph,activity</field>
    </record>
</odoo>
