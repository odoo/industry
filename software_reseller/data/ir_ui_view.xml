<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="project_project_form_customization" model="ir.ui.view">
        <field name="name">project.project.form customization</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="mode">extension</field>
        <field name="priority">240</field>
        <field name="type">form</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='settings']//group[@name='group_time_managment']" position="inside">
                <group name="group_licence_management">
                    <group name="group_is_license" string="License" class="row mt16 o_settings_container col-lg-6">
                        <setting class="col-lg-12" help="Make the project visible in the Licences app" id="x_is_licence_id">
                            <field name="x_is_license" />
                        </setting>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="odoo_studio_project__d0a22dfd-43ad-48f1-a212-43b090f0679c" model="ir.ui.view">
        <field name="name">project.task.form customization</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="active" eval="True"/>
        <field name="mode">extension</field>
        <field name="priority">1000</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//group/field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                </xpath>
                <xpath expr="//group/field[@name='sale_order_id']" position="attributes">
                    <attribute name="invisible">False</attribute>
                </xpath>
                <xpath expr="//sheet/group" position="after">
                    <group name="studio_group_6tg_1ip1u4p6l">
                        <group name="studio_group_6tg_left" string="License" invisible="not x_studio_is_license">
                            <field name="x_studio_users"/>
                            <field name="x_studio_environment" invisible="x_studio_software == &quot;Odoo&quot;"/>
                            <field name="x_studio_hosted_on" invisible="x_studio_software != &quot;Odoo&quot;"/>
                            <field name="x_studio_version" placeholder="20.0.1"/>
                            <field name="x_studio_license_key"/>
                        </group>
                    </group>
                </xpath>
            </data>
        </field>
    </record>
    <record id="odoo_studio_project__0ef30925-c172-4ee2-9876-05970e8b12fc" model="ir.ui.view">
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="mode">extension</field>
        <field name="active" eval="True"/>
        <field name="model">project.task.type</field>
        <field name="name">project.task.type.form customization</field>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='sequence']" position="after">
                    <field name="x_studio_expiration_check"/>
                </xpath>
            </data>
        </field>
    </record>
    <record id="odoo_studio_res_part_c1b5be2d-58e2-46f8-9508-f6201b264538" model="ir.ui.view">
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="mode">extension</field>
        <field name="model">res.partner</field>
        <field name="active" eval="True"/>
        <field name="name">res.partner.form customization</field>
        <field name="priority">360</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//button[@name='action_open_employees']" position="after">
                    <button class="oe_stat_button" icon="fa-code" type="action" name="%(licenses_act_window)d">
                        <field widget="statinfo" name="x_partner_id_project_task_count" string="Licenses"/>
                    </button>
                </xpath>
            </data>
        </field>
    </record>
    <record id="odoo_studio_project__53434c77-472d-4fd8-8ad2-0d8765573b86" model="ir.ui.view">
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="mode">extension</field>
        <field name="model">project.task</field>
        <field name="active" eval="True"/>
        <field name="name">project.task.list customization</field>
        <field name="priority">160</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='stage_id']" position="replace"/>
                <xpath expr="//field[@name='tag_ids']" position="replace"/>
                <xpath expr="//field[@name='activity_ids']" position="replace"/>
                <xpath expr="//list[1]/field[@name='progress'][2]" position="replace"/>
                <xpath expr="//list[1]/field[@name='effective_hours'][2]" position="replace"/>
                <xpath expr="//field[@name='project_id']" position="replace"/>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="x_studio_software" optional="show"/>
                    <field name="x_studio_version" optional="show"/>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="column_invisible">False</attribute>
                    <attribute name="invisible">False</attribute>
                    <attribute name="optional">show</attribute>
                </xpath>
            </data>
        </field>
    </record>
    <record id="odoo_studio_hr_emplo_313b71df-1558-42f7-9e21-39e78b20424f" model="ir.ui.view">
        <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
        <field name="mode">extension</field>
        <field name="model">hr.employee</field>
        <field name="active" eval="True"/>
        <field name="name">hr.employee.kanban customization</field>
        <field name="priority">99</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='employee_properties']" position="after">
                    <field name="default_planning_role_id" display="full"/>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
