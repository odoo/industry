<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_loftspace', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

    <function model="theme.utils" name="enable_view" eval="['website_sale.filmstrip_categories_large_images']"/>

    <function model="web_editor.assets" name="make_scss_customization">
        <value eval="'/website/static/src/scss/options/user_values.scss'" />
        <value eval="{
            'menu-gradient': 'null',
            'menu-secondary-gradient': 'null',
            'footer-gradient': 'null',
            'copyright-gradient': 'null',
            'o-cc1-bg-gradient': 'null',
            'o-cc2-bg-gradient': 'null',
            'o-cc3-bg-gradient': 'null',
            'o-cc4-bg-gradient': 'null',
            'o-cc5-bg-gradient': 'null',
            'font': 'null',
            'headings-font': 'null',
            'navbar-font': 'null',
            'buttons-font': 'null',
            'color-palettes-number': 'null',
            'color-palettes-name': 'default-1',
            'btn-ripple': 'null',
            'header-template': 'sales_one',
            'footer-template': 'headline',
            'footer-scrolltop': 'null',
            'header-links-style': 'default',
            'layout': 'full',
            'body-image-type': 'image',
            'body-image': 'null',
            'menu-box-shadow': 'none',
            'header-scroll-effect': 'null',
            'btn-primary-outline': 'false',
            'btn-primary-flat': 'false',
          }"/>
    </function>
    <function model="web_editor.assets" name="make_scss_customization">
        <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
        <value eval="{
            'o-color-3': '#F2F2F3',
            'o-color-4': '#FFFFFF',
            'menu': 5,
            'footer': 2,
          }"/>
    </function>

</odoo>
