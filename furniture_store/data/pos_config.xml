<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="point_of_sale.pos_config_main" model="pos.config">
        <field name="use_pricelist" eval="True"/>
        <field name="available_pricelist_ids" model="product.pricelist" eval="[(6, 0, obj().search([('currency_id', '=', obj().env.ref('point_of_sale.pos_config_main').currency_id.id)]).ids)]"/>
        <field name="pricelist_id" model="product.pricelist" eval="obj().search([
                        ('id', '!=', obj().env.ref('furniture_store.product_pricelist_2').id),
                        ('company_id', '=', obj().env.ref('base.main_company').id)
                ], limit=1).id"/>
        <field name="ship_later" eval="True"/>
    </record>
</odoo>
