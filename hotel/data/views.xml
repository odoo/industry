<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="booking_engine.booking_engine_menu_root" model="ir.ui.menu" forcecreate="1">
    <field name="web_icon_data" type="base64" file="hotel/static/description/icon_no_border.png"/>
    <field name="name">Hotel</field>
  </record>
  <record id="hotel_resource_list" model="ir.ui.view">
    <field name="arch" type="xml">
      <xpath expr="/list//field[@name='calendar_id']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
    </field>
    <field name="inherit_id" ref="booking_engine.booking_engine_resource_list"/>
    <field name="mode">extension</field>
    <field name="model">resource.resource</field>
    <field name="name">resource.resource.list.inherit.hotel</field>
    <field name="priority">100</field>
    <field name="type">list</field>
    <field name="active" eval="True"/>
  </record>
</odoo>
