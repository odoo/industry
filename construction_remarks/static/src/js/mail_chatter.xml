<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Chatter" t-inherit-mode="extension">
        <xpath expr="//div[@t-if='state.isAttachmentBoxOpened']" position="attributes">
            <attribute name="t-if">
                this.env.searchModel.context.force_open_attachments or state.isAttachmentBoxOpened
            </attribute>
        </xpath>
    </t>
</templates>
