        <field name="name">Done</field>
    </record>
    <record model="ir.model.fields.selection" id="selection_field_x_remark_x_state_cancelled">
        <field name="field_id" ref="field_x_remark_x_state"/>
        <field name="value">1_canceled</field>
        <field name="name">Cancelled</field>
    </record>
    <record model="ir.model.fields" id="field_x_remark_x_location">
        <field name="model_id" ref="model_x_remark"/>
        <field name="ttype">char</field>
        <field name="name">x_location</field>
        <field name="field_description">Location</field>
    </record>
    <record model="ir.model.fields" id="field_x_remark_x_due_date">
        <field name="model_id" ref="model_x_remark"/>
        <field name="ttype">date</field>
        <field name="name">x_due_date</field>
        <field name="field_description">Due Date</field>
    </record>
    <record model="ir.model.fields" id="field_x_remark_x_category">
