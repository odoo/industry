<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="mail_template_43" model="mail.template" >
        <field name="name">Logo Request</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="subject">Logo for {{ object.name }}</field>
        <field name="use_default_to" eval="True"/>
        <field name="body_html">
        <![CDATA[
            <p style="margin: 0px 0 16px 0; box-sizing: border-box;">Hello,</p>
            <p style="margin: 0px 0 16px 0; box-sizing: border-box;">
                Following your order with our company,<br />
                can you send us your logo in vectorial format: .SVG or .PDF?
            </p>
            <p style="margin: 0px 0 16px 0; box-sizing: border-box;">Thanks,</p>
        ]]>
        </field>
    </record>
</odoo>
