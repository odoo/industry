<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_orchid', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

    <function model="website.assets" name="make_scss_customization">
      <value eval="'/website/static/src/scss/options/user_values.scss'"/>
      <value eval="{
          'menu-gradient': 'null',
          'menu-secondary-gradient': 'null',
          'footer-gradient': 'NULL',
          'copyright-gradient': 'null',
          'o-cc1-bg-gradient': 'null',
          'o-cc2-bg-gradient': 'null',
          'o-cc3-bg-gradient': 'null',
          'o-cc4-bg-gradient': 'null',
          'o-cc5-bg-gradient': 'null',
          'font': 'Outfit',
          'headings-font': 'Winky Sans',
          'navbar-font': 'null',
          'buttons-font': 'Open Sans',
          'color-palettes-number': 'null',
          'color-palettes-name': 'null',
          'btn-ripple': 'null',
          'header-template': 'vertical',
          'footer-template': 'minimalist',
          'footer-scrolltop': 'null',
          'header-links-style': 'default',
          '': 'null',
          'menu-border-width': '0px',
          'google-fonts': &quot;('Bubblegum Sans', 'Open Sans', 'Winky Sans', 'Outfit')&quot;,
          'google-local-fonts': 'null',
          'uploaded-local-fonts': 'null',
          'logo-height': '3.125rem',
          'btn-border-radius': '0.625rem',
          'menu-border-radius': '10px',
      }"/>
    </function>

    <function model="website.assets" name="make_scss_customization">
      <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'"/>
      <value eval="{
          'o-color-1': '#FF99C4',
          'o-color-2': '#FFADD0',
          'o-color-3': '#EAF5FD',
          'footer': 1,
          'footer-custom': 'NULL',
        }"/>
    </function>
    <function model="website.assets" name="make_scss_customization">
      <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
      <value eval="{
            'success': 'null',
            'info': 'null',
            'warning': 'null',
            'danger': 'null',
        }"/>
    </function>

    <function model="ir.ui.view" name="write">
      <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
      <value model="ir.ui.view" eval="{'arch': obj().env.ref('candy_shop.homepage').arch}"/>
    </function>

    <function model="ir.ui.view" name="write">
      <value model="ir.ui.view" eval="obj().search([('key', '=', 'website.footer_custom')]).ids"/>
      <value eval="{'active': False}"/>
    </function>

    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.template_footer_minimalist').id"/>
        <value model="ir.ui.view" eval="{
            'arch': obj().env.ref('candy_shop.ir_ui_view_3453').arch,
            'active': True
        }"/>
    </function>

    <data noupdate="1">
      <function model="website.menu" name="unlink">
          <value model="website.menu" eval="obj().search([('website_id', '=', ref('website.default_website')), ('url', '=', '/contactus')]).id"/>
      </function>
    </data>
</odoo>
