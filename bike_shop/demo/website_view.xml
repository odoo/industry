    <record id="repairs" model="ir.ui.view">
        <field name="key">bike_shop.repairs</field>
        <field name="name">Repairs</field>
        <field name="type">qweb</field>
        <field name="website_id" ref="website.default_website" />
        <field name="arch" type="xml">
            <t t-name="website.repairs">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt40 pb0 o_colored_level" data-snippet="s_text_block" data-name="Text">
                            <div class="container s_allow_columns">
                                <h1 style="text-align: center;">Repairs and Maintenance</h1>
                            </div>
                        </section>
                        <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text">
                            <div class="s_allow_columns container">
                                <p>
                                    Keep your bike running smoothly with our professional repair and maintenance services. Whether it’s a quick <strong>tune-up or a full overhaul</strong>, our expert mechanics ensure your ride is
                                    <strong>safe, fast, and fun</strong>. We service all types of bikes with care and precision.
                                </p>
                                <h5>
                                    <strong>What’s Included in the Maintenance Package?</strong>
                                </h5>
                                <ul>
                                    <li>Full bike safety inspection</li>
                                    <li>Brake check, cleaning, and adjustment</li>
                                    <li>Drivetrain and gear cleaning and tuning</li>
                                    <li>Belt/chain and crankset inspection</li>
                                    <li>Tire pressure check and inflation</li>
                                    <li>Wheel alignment and spoke tension</li>
                                    <li>Cockpit (handlebar and stem) alignment</li>
                                    <li>Electrical components check and software updates (if applicable)</li>
                                    <li>Lighting system check</li>
                                    <li>Test ride to verify overall performance</li>
                                    <li>Consumables and environmental contribution included</li>
                                </ul>
                            </div>
                        </section>
                        <section class="s_text_image o_colored_level pb0 pt0" data-snippet="s_image_text" data-name="Text - Image">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 pt16 pb16 o_colored_level">
                                        <img
                                            src="/unsplash/tG36rvCeqng/1250/bike.jpg?unique=1eb6eef0"
