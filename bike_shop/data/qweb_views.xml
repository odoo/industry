<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="report_custom_worksheet_template" model="ir.ui.view">
        <field name="arch" type="xml">
            <t t-name="x_project_task_worksheet_template">
                <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Technician</div>
                    <div options="{'no_create':true, 'no_open':true}" can_create="True" can_write="True" t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_manufacturer" />
                </div>
                <div class="row mb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Serial Number</div>
                    <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_serial_number" />
                </div>
                <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Intervention Type</div>
                    <div widget="radio" t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_intervention_type" />
                </div>
                <div class="row mb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Description of the work done</div>
                    <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_description" />
                </div>
                <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">I hereby certify that this bike has been inspected and serviced as required at the time of repair.</div>
                    <i t-att-class="'col-lg-7 col-12 fa ' + ('fa-check-square' if worksheet.x_checkbox else 'fa-square-o')" />
                </div>
                <div class="row mb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Date</div>
                    <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_date" />
                </div>
                <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid;">
                    <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Technician Signature</div>
                    <img style="width: 250px;" t-att-src="image_data_uri(worksheet.x_worker_signature)" t-if="worksheet.x_worker_signature" />
                </div>
            </t>
        </field>
        <field name="name">x_worksheet_template</field>
        <field name="active" eval="True"/>
        <field name="type">qweb</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_ui_view_1" model="ir.ui.view">
        <field name="arch" type="xml">
            <form create="false" duplicate="false">
                <sheet>
                    <group invisible="context.get('default_x_project_task_id')">
                        <div class="oe_title">
                            <h1>
                                <field name="x_project_task_id" domain="[('is_fsm', '=', True)]" readonly="1" />
                            </h1>
                        </div>
                    </group>
                    <group class="o_fsm_worksheet_form">
                        <field name="x_name" string="Name" options="{'placeholder_field':'display_name'}" />
                        <field name="x_manufacturer" options="{'no_create':true, 'no_open':true}" string="Technician" />
                        <field name="x_serial_number" />
                        <field name="x_intervention_type" widget="radio" />
                        <field name="x_description" string="Description of the work done" />
                        <field name="x_checkbox" string="I hereby certify that this bike has been inspected and serviced as required at the time of repair." />
                        <field name="x_date" />
                        <field name="x_worker_signature" widget="signature" string="Technician Signature" />
                    </group>
                </sheet>
            </form>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">template_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">form</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_ui_view_2" model="ir.ui.view">
        <field name="arch" type="xml">
            <list default_order="create_date DESC">
                <field name="create_date" />
                <field name="x_name" />
            </list>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">list_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">list</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_ui_view_3" model="ir.ui.view">
        <field name="arch" type="xml">
            <search>
                <field name="x_name" />
                <filter string="Created on" date="create_date" name="create_date" />
                <filter name="group_by_month" string="Created on" context="{'group_by': 'create_date:month'}" />
            </search>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">search_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">search</field>
    </record>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="mode">extension</field>
        <field name="model">sale.order</field>
        <field name="name">sale.order.form customization</field>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="x_collectible"/>
            </xpath>
        </field>
    </record>
    <record id="team_form_2" model="ir.ui.view">
        <field name="key">website_helpdesk.team_form_2</field>
        <field name="name">website_helpdesk.team_form_2</field>
        <field name="type">qweb</field>
        <field name="active" eval="True" />
        <field name="website_id" ref="website.default_website"/>
        <field name="arch" type="xml">
            <t name="Helpdesk: Submit a Ticket Form" t-name="website_helpdesk.ticket_submit_form">
                <div class="container">
                    <h2> Submit a Ticket <t t-if="multiple_teams"> - <t t-out="team.name" /></t>
                    </h2>
                    <div class="oe_structure" id="oe_structure_whelpdesk_form_1" />
                    <span class="hidden" data-for="helpdesk_ticket_form"
                        t-att-data-values="{'team_id': team and team.id or ''}" />
                    <div id="helpdesk_section" class="">
                        <section class="s_website_form pt16 pb16 o_colored_level" data-vcss="001"
                            data-snippet="s_website_form" data-name="Form">
                            <div class="container">
                                <form id="helpdesk_ticket_form" action="/website/form/"
                                    method="post" enctype="multipart/form-data"
                                    class="o_mark_required" data-mark="*" data-pre-fill="true"
                                    data-success-mode="redirect"
                                    data-success-page="/your-ticket-has-been-submitted"
                                    data-model_name="helpdesk.ticket" hide-change-model="true">
                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_required"
                                            data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px" for="helpdesk1">
                                                    <span class="s_website_form_label_content">Full
                                                        Name</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="text"
                                                        class="form-control s_website_form_input"
                                                        name="partner_name" required="1"
                                                        data-fill-with="name" id="helpdesk1" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_required"
                                            data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px" for="helpdesk2">
                                                    <span class="s_website_form_label_content">Phone
                                                        Number</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="tel"
                                                        class="form-control s_website_form_input"
                                                        name="partner_phone" data-fill-with="phone"
                                                        id="helpdesk2" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_required"
                                            data-type="email" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label "
                                                    style="width: 200px" for="helpdesk3">
                                                    <span class="s_website_form_label_content">Email
                                                        Address</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="email"
                                                        class="form-control s_website_form_input"
                                                        name="partner_email" required="1"
                                                        data-fill-with="email" id="helpdesk3" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_custom"
                                            data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px" for="helpdesk4">
                                                    <span class="s_website_form_label_content">Bike
                                                        Model</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="text"
                                                        class="form-control s_website_form_input"
                                                        name="Bike Model"
                                                        data-fill-with="commercial_company_name"
                                                        id="helpdesk4" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required"
                                            data-type="char" data-name="Field"
                                            data-translated-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px" for="ocgl4nwpcoep">
                                                    <span class="s_website_form_label_content">Serial
                                                        Number</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input class="form-control s_website_form_input"
                                                        type="text" name="Serial Number"
                                                        placeholder="" id="ocgl4nwpcoep"
                                                        data-fill-with="commercial_company_name"
                                                        required="" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="s_website_form_field mb-3 col-12 s_website_form_custom"
                                            data-type="date" data-name="Field"
                                            data-translated-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px" for="ombcxxlmanh">
                                                    <span class="s_website_form_label_content">Purchase
                                                        date</span>
                                                </label>
                                                <div class="col-sm">
                                                    <div
                                                        class="s_website_form_date input-group date">
                                                        <input type="text"
                                                            class="form-control datetimepicker-input s_website_form_input"
                                                            name="Purchase date" placeholder=""
                                                            id="ombcxxlmanh"
                                                            data-fill-with="commercial_company_name" />
                                                        <div
                                                            class="input-group-text o_input_group_date_icon">
                                                            <i class="fa fa-calendar" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_model_required"
                                            data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label "
                                                    style="width: 200px" for="helpdesk5">
                                                    <span class="s_website_form_label_content">Message
                                                        Subject</span>
                                                    <span class="s_website_form_mark"> *</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="text"
                                                        class="form-control s_website_form_input"
                                                        name="name" required="true" id="helpdesk5" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-0 py-2 s_website_form_field col-12"
                                            data-type="char" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label "
                                                    style="width: 200px" for="helpdesk6">
                                                    <span class="s_website_form_label_content">Ask
                                                        Your Question</span>
                                                </label>
                                                <div class="col-sm">
                                                    <textarea type="text"
                                                        class="form-control s_website_form_input"
                                                        name="description" required="true"
                                                        id="helpdesk6" rows="5" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_custom"
                                            data-type="binary" data-name="Field">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label class=" col-sm-auto s_website_form_label "
                                                    style="width: 200px" for="helpdesk7">
                                                    <span class="s_website_form_label_content">
                                                        Attachment</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="file"
                                                        class="form-control s_website_form_input"
                                                        name="Attachment" id="helpdesk7" />
                                                </div>
                                            </div>
                                        </div>
                                        <div
                                            class="mb-0 py-2 s_website_form_field col-12 s_website_form_dnone"
                                            data-name="Field" data-type="record"
                                            data-model="helpdesk.team">
                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                <label
                                                    class="col-form-label col-sm-auto s_website_form_label"
                                                    style="width: 200px">
                                                    <span class="s_website_form_label_content">Helpdesk
                                                        Team</span>
                                                </label>
                                                <div class="col-sm">
                                                    <input type="hidden"
                                                        class="form-control s_website_form_input"
                                                        name="team_id" id="helpdesk8" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-0 py-2 col-12 s_website_form_submit"
                                            data-name="Submit Button">
                                            <div style="width: 200px;" class="s_website_form_label" />
                                            <a href="#" role="button"
                                                class="btn btn-primary btn-lg s_website_form_send">Submit
                                                Ticket</a>
                                            <span id="s_website_form_result" />
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </field>
    </record>
    <record id="ir_ui_view_3952" model="ir.ui.view">
        <field name="arch" type="xml">
            <data>
                <xpath expr="//*[hasclass('oe_structure')][@id='oe_structure_whelpdesk_form_1']"
                    position="replace">
                    <div class="oe_structure" id="oe_structure_whelpdesk_form_1">
                        <section class="s_text_block o_colored_level pb16 pt16"
                            data-snippet="s_text_block" data-name="Text">
                            <div class="container s_allow_columns">
                                <p>Find all the information you need about product warranties,
                                    coverage periods, and how our after-sales support team is here
                                    to help you even after your purchase.</p>
                            </div>
                        </section>
                    </div>
                </xpath>
            </data>
        </field>
        <field name="inherit_id" ref="team_form_2" />
        <field name="key">bike_shop.team_form_2_oe_structure_whelpdesk_form_1</field>
        <field name="mode">extension</field>
        <field name="name">website_helpdesk.team_form_2 (oe_structure_whelpdesk_form_1)</field>
        <field name="type">qweb</field>
        <field name="website_id" ref="website.default_website" />
        <field name="active" eval="True" />
    </record>
</odoo>
