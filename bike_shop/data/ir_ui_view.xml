<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="x_project_task_worksheet_template_ir_ui_view_1" model="ir.ui.view">
        <field name="arch" type="xml">
            <form create="false" duplicate="false">
                <sheet>
                    <group invisible="context.get('default_x_project_task_id')">
                        <div class="oe_title">
                            <h1>
                                <field name="x_project_task_id" domain="[('is_fsm', '=', True)]" readonly="1" />
                            </h1>
                        </div>
                    </group>
                    <group class="o_fsm_worksheet_form">
                        <field name="x_name" string="Name" options="{'placeholder_field':'display_name'}" />
                        <field name="x_manufacturer" options="{'no_create':true, 'no_open':true}" string="Technician" />
                        <field name="x_serial_number" />
                        <field name="x_intervention_type" widget="radio" />
                        <field name="x_description" string="Description of the work done" />
                        <field name="x_checkbox" string="I hereby certify that this bike has been inspected and serviced as required at the time of repair." />
                        <field name="x_date" />
                        <field name="x_worker_signature" widget="signature" string="Technician Signature" />
                    </group>
                </sheet>
            </form>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">template_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">form</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_ui_view_2" model="ir.ui.view">
        <field name="arch" type="xml">
            <list default_order="create_date DESC">
                <field name="create_date" />
                <field name="x_name" />
            </list>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">list_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">list</field>
    </record>
    <record id="x_project_task_worksheet_template_ir_ui_view_3" model="ir.ui.view">
        <field name="arch" type="xml">
            <search>
                <field name="x_name" />
                <filter string="Created on" date="create_date" name="create_date" />
                <filter name="group_by_month" string="Created on" context="{'group_by': 'create_date:month'}" />
            </search>
        </field>
        <field name="model">x_worksheet_template</field>
        <field name="name">search_view_Device_Installation_and_Maintenance</field>
        <field name="active" eval="True"/>
        <field name="type">search</field>
    </record>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="mode">extension</field>
        <field name="model">sale.order</field>
        <field name="name">sale.order.form customization</field>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="x_collectible"/>
            </xpath>
        </field>
    </record>
</odoo>
