<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="industry_fsm_report.report_custom_x_project_task_worksheet_template_2" model="ir.ui.view" forcecreate="1">
    <field name="arch" type="xml">
      <t t-name="x_project_task_worksheet_template_2">
        <div>
          <div>
            <div>
              <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Technician	</div>
                <div options="{'no_create':true, 'no_open':true}" can_create="True" can_write="True" t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_manufacturer"/>
              </div>
              <div class="row mb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Serial Number</div>
                <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_serial_number"/>
              </div>
              <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Intervention Type</div>
                <div widget="radio" t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_intervention_type"/>
              </div>
              <div class="row mb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Description of the work done</div>
                <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_description"/>
              </div>
              <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">I hereby certify that this bike has been inspected and serviced as required at the time of repair.</div>
                <i t-att-class="'col-lg-7 col-12 fa ' + ('fa-check-square' if worksheet.x_checkbox else 'fa-square-o')"/>
              </div>
              <div class="row mb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Date</div>
                <div t-att-class="'col-7' if report_type == 'pdf' else 'col-lg-9 col-12'" t-field="worksheet.x_date"/>
              </div>
              <div class="row mb-2 bg-light bg-opacity-25 border-top border-bottom pt-2 pb-2" style="page-break-inside: avoid">
                <div t-att-class="('col-5' if report_type == 'pdf' else 'col-lg-3 col-12') + ' fw-bold'">Technician Signature</div>
                <img style="width: 250px;" t-att-src="image_data_uri(worksheet.x_worker_signature)" t-if="worksheet.x_worker_signature"/>
              </div>
            </div>
          </div>
        </div>
      </t>
    </field>
    <field name="key">gen_key.8a787c</field>
    <field name="name">x_project_task_worksheet_template_2</field>
    <field name="type">qweb</field>
  </record>
  <record id="industry_fsm_report.x_project_task_worksheet_template_2_ir_ui_view_1" model="ir.ui.view" forcecreate="1">
    <field name="arch" type="xml">
      <form create="false" duplicate="false">
        <sheet>
          <h1 invisible="context.get('studio') or context.get('default_x_project_task_id')">
            <field name="x_project_task_id"/>
          </h1>
          <group>
            <field name="x_comments" placeholder="Add details about your intervention..."/>
          </group>
        </sheet>
      </form>
    </field>
    <field name="model">x_project_task_worksheet_template_2</field>
    <field name="name">template_view_Device_Installation_and_Maintenance</field>
    <field name="type">form</field>
  </record>
