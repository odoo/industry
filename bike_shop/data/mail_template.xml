<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="mail_template_order_ready" model="mail.template">
        <field name="body_html">
            <![CDATA[<div style="margin: 0px; padding: 0px; font-size: 13px;"> <p style="margin: 0px; padding: 0px; font-size: 13px;"> Dear <t t-out="object.partner_id.name">,</t><br/><br/> Your order <t t-out="object.name"></t> is ready.
            You can collect it at our store at your convenience. Thank you for your trust and patience!<br/><br/> Do not hesitate to contact us if you have any questions. <t t-out="object.user_id.name"></t> </div> ]]>
        </field>
        <field name="name">Sales Order: Order Ready</field>
        <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or user.email_formatted or '') }}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="subject">Your order {{ object.name }} is ready for pickup</field>
    </record>
    <record id="mail_template_warranty_claim" model="mail.template">
        <field name="body_html">
            <![CDATA[<div style="margin: 0px; padding: 0px; font-size: 13px;"> <p style="margin: 0px; padding: 0px; font-size: 13px;"> Dear <t t-out="object.partner_id.name">,</t><br/><br/> We are submitting a warranty claim for a customer.
            <ul> <li>Customer Name</li> <li>Product ID</li> <li>Serial Number</li> <li>Purchase Date</li> </ul> Issue Description: <t t-out="object.description"></t><br></br> Please find attached photos of the defect. Thank you, <t
            t-out="object.user_id.name"></t> <t t-out="object.company.name"></t> </div> ]]>
        </field>
        <field name="name">Helpdesk: Warranty Claim</field>
        <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or user.email_formatted or '') }}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="model_id" ref="helpdesk.model_helpdesk_ticket" />
        <field name="subject">Warranty Claim â€“ {{ object.partner_id.name }} - {{object.product_id.name}}</field>
    </record>
</odoo>
