        <field name="ttype">many2one</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="field_description">Task</field>
        <field name="on_delete">cascade</field>
        <field name="relation">project.task</field>
        <field name="required" eval="True" />
    </record>
    <record id="worksheet_template_ir_model_fields_8" model="ir.model.fields">
        <field name="ttype">char</field>
        <field name="related">x_project_task_id.name</field>
        <field name="field_description">Name</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_name</field>
    </record>
    <record id="worksheet_template_ir_model_fields_10" model="ir.model.fields">
        <field name="ttype">text</field>
        <field name="copied" eval="True" />
        <field name="field_description">Description of the work done</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_description</field>
    </record>
    <record id="worksheet_template_ir_model_fields_11" model="ir.model.fields">
        <field name="ttype">many2one</field>
        <field name="copied" eval="True" />
        <field name="field_description">Technician </field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_manufacturer</field>
        <field name="relation">res.partner</field>
    </record>
    <record id="worksheet_template_ir_model_fields_12" model="ir.model.fields">
        <field name="ttype">boolean</field>
        <field name="field_description">I hereby certify that this bike has been inspected and serviced as required at the time of repair.</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_checkbox</field>
    </record>
    <record id="worksheet_template_ir_model_fields_13" model="ir.model.fields">
        <field name="ttype">binary</field>
        <field name="field_description">Technician Signature</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_worker_signature</field>
    </record>
    <record id="worksheet_template_ir_model_fields_7" model="ir.model.fields">
        <field name="ttype">html</field>
        <field name="copied" eval="True" />
        <field name="field_description">Comments</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_comments</field>
    </record>
    <record id="worksheet_template_ir_model_fields_14" model="ir.model.fields">
        <field name="ttype">date</field>
        <field name="copied" eval="True" />
        <field name="field_description">Date</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_date</field>
    </record>
    <record id="worksheet_template_ir_model_fields_15" model="ir.model.fields">
        <field name="ttype">selection</field>
        <field name="copied" eval="True" />
        <field name="field_description">Intervention Type</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_intervention_type</field>
        <field name="selection">[('bike_maintenance', 'Bike Maintenance'), ('additional_reparation', 'Additional Reparation')]</field>
    </record>
    <record id="worksheet_template_ir_model_fields_16" model="ir.model.fields">
        <field name="ttype">char</field>
        <field name="copied" eval="True" />
        <field name="field_description">Serial Number</field>
        <field name="model_id" ref="x_worksheet_template_model" />
        <field name="name">x_serial_number</field>
    </record>
     <record id="field_sale_order_collectible" model="ir.model.fields">
        <field name="ttype">boolean</field>
        <field name="depends">tasks_ids.is_closed</field>
        <field name="compute"><![CDATA[
for record in self:
    record['x_collectible'] = all(task.is_closed for task in record.tasks_ids) if record.tasks_ids else False
]]></field>
        <field name="field_description">Ready for Pickup</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="name">x_collectible</field>
        <field name="readonly" eval="True"/>
        <field name="store" eval="True"/>
    </record>
    <record id="field_project_task_collectible" model="ir.model.fields">
        <field name="ttype">boolean</field>
        <field name="related">sale_order_id.x_collectible</field>
        <field name="field_description">Is order collectible</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="name">x_is_order_collectible</field>
        <field name="readonly" eval="True"/>
        <field name="store" eval="False"/>
    </record>
</odoo>
