<?xml version="1.0"?>
<odoo noupdate="1">
    <function model="mail.template" name="write">
        <value eval="ref('event.event_subscription')"/>
        <value model="mail.template" eval="{
            'body_html': obj().env.ref('event.event_subscription').body_html.replace('event_end_date', 'x_displayed_end_date').replace('event_begin_date', 'x_displayed_start_date')
        }"/>
    </function>
    <function model="mail.template" name="write">
        <value eval="ref('event.event_registration_mail_template_badge')"/>
        <value model="mail.template" eval="{
            'body_html': obj().env.ref('event.event_registration_mail_template_badge').body_html.replace('event_end_date', 'x_displayed_end_date').replace('event_begin_date', 'x_displayed_start_date')
        }"/>
    </function>
</odoo>
