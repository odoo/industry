<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="mail_template_51" model="mail.template">
        <field name="body_html"><![CDATA[
<div data-oe-version="2.0">Dear Sir or Madam,</div><div><br/></div><div>Please find attached the CSV file containing all fiscal attestations for the year <t t-out="object.invoice_date.year if object.invoice_date else ''"/>.</div><br/><div>If you require any additional information, feel free to reach out to us at <t t-out="object.company_id.email"/>.</div><br/><div>Best regards, </div><div><t t-out="object.user_id.name"/> </div><div><t t-out="object.company_id.name"/> </div><div><t t-out="object.user_id.email"/> | <t t-out="object.company_id.phone"/></div>
]]></field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="name">Fiscal Attestation Authorities</field>
        <field name="subject">Fiscal Attestations for {{ object.partner_id.name }}</field>
    </record>
    <record id="mail_template_50" model="mail.template">
        <field name="body_html"><![CDATA[
<div data-oe-version="2.0">Dear <t t-out="object.partner_id.name"/>,</div><br/><div>Thank you for your continued support in <t t-out="object.invoice_date.year if object.invoice_date else ''"/>.</div><br/><div>Please find attached your fiscal attestation for this year. </div><br/><div>If you have any questions, feel free to contact us at <t t-out="object.company_id.email"/>.</div><br/><div>Warm regards, </div><div>The <t t-out="object.company_id.name"/> team </div><div><t t-out="object.company_id.email"/> | <t t-out="object.company_id.phone"/></div>
]]></field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="name">Fiscal Attestation Donor</field>
        <field name="subject">Thank you for your support !</field>
    </record>
</odoo>
