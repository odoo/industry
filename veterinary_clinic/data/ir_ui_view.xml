  <record id="res_partner_custom_form_view" model="ir.ui.view">
    <field name="name">res.partner.form customization</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="mode">extension</field>
    <field name="model">res.partner</field>
    <field name="active" eval="True"/>
    <field name="priority">200</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='is_published']" position="after">
          <button name="%(pets_default_owner_window_action)d" class="oe_stat_button" icon="fa-paw" type="action">
