  <record id="list_view_for_x_pets_default" model="ir.ui.view">
    <field name="name">list view for x_pets</field>
    <field name="model">x_pets</field>
    <field name="active" eval="True"/>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="x_sequence" widget="handle"/>
        <field name="x_name"/>
        <field name="x_species" optional="show"/>
        <field name="x_breed" optional="show"/>
        <field name="x_gender" optional="show"/>
        <field name="x_aggression_level" optional="show"/>
        <field name="x_owner" optional="show"/>
        <field name="x_microchip_number" optional="hide"/>
      </list>
    </field>
  </record>  
  <record id="form_view_for_x_pets" model="ir.ui.view">
    <field name="name">form view for x_pets</field>
    <field name="model">x_pets</field>
    <field name="type">form</field>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <form>
        <header/>
        <sheet string="Pets">
          <div name="button_box" class="oe_button_box">
            <button name="%(veterinary_visits_window_action)d" class="oe_stat_button" icon="fa-heart" type="action">
              <field widget="statinfo" name="x_x_many2many_field_calendar_event_count" string="Appointments"/>
            </button>
          </div>
  
          <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="x_active"/>
          <field name="x_active" invisible="1"/>
          <field name="x_avatar_image" widget="image" class="oe_avatar"/>
  
          <div class="oe_title">
            <h1>
              <field name="x_name" required="1" placeholder="Name..."/>
            </h1>
          </div>
  
          <group name="main_group">
            <group name="left_group" string="Identifiers">
              <field name="x_owner" options="{'no_create': true}" required="True"/>
              <field name="x_owner_email"/>
              <field name="x_owner_phonemobile"/>
              <field name="x_microchip_number"/>
            </group>
            <group name="right_group" string="Information">
              <field name="x_date_of_birth"/>
              <field name="x_species" options="{'create_name_field': 'x_name', 'no_create': true}"/>
              <field name="x_breed" options="{'create_name_field': 'x_name'}"/>
              <field name="x_gender"/>
              <field name="x_reproductive_status"/>
            </group>
          </group>
  
          <group name="group_handling_instructions" string="Handling instructions">
            <field name="x_instructions"/>
            <field name="x_aggression_level" widget="selection_badge" options="{'size': 'sm'}"/>
          </group>
  
          <group string="General remarks">
            <field name="x_notes" placeholder="Type down your notes here..." nolabel="1" colspan="2" help="Type down your notes here..."/>
          </group>
  
          <notebook>
            <page string="Appointment log" name="lines">
              <field name="x_pets_line_ids" string="Consultations">
                <list open_form_view="true" editable="bottom">
                  <field name="x_sequence" widget="handle"/>
                  <field name="x_name" string="Consultation ID" readonly="True"/>
                  <field name="x_appointment_date" optional="show"/>
                  <field name="x_general_remarks" optional="show" string="Appointment summary"/>
                  <field name="x_weight" optional="show"/>
                  <field name="x_vaccines_given" optional="show" widget="many2many_tags"/>
                  <field name="x_observed_illnesses" optional="show" widget="many2many_tags"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>
  <record id="search_view_for_x_pets_default" model="ir.ui.view">
    <field name="name">search view for x_pets</field>
    <field name="model">x_pets</field>
    <field name="active" eval="True"/>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="x_name"/>
        <field name="x_microchip_number"/>
        <field name="x_species"/>
        <separator/>
        <filter string="Archived" name="archived_x_pets" domain="[['x_active', '=', False]]"/>
        <separator/>
        <group/>
        <filter name="group_by_owner" string="Owner" context="{'group_by': 'x_owner'}"/>
        <filter name="group_by_species" string="Species" context="{'group_by': 'x_species'}"/>
        <filter name="group_by_create_uid" string="Created by" context="{'group_by': 'create_uid'}"/>
        <filter name="group_by_create_date" string="Created on" context="{'group_by': 'create_date'}"/>
      </search>
    </field>
  </record>
  <record id="kanban_custom_view_for_x_pets" model="ir.ui.view">
    <field name="name">kanban view for x_pets</field>
    <field name="mode">primary</field>
    <field name="model">x_pets</field>
    <field name="active" eval="True"/>
    <field name="priority">16</field>
    <field name="type">kanban</field>
    <field name="arch" type="xml">
      <kanban string="Pets">
        <templates>
          <t t-name="card">
            <field name="x_avatar_image" display="full" widget="image" options="{&quot;size&quot;:[0,90]}"/>
            <field name="x_name" class="fw-bold"/>
            <field name="x_species" display="full" class="fw-bold"/>
            <field name="x_breed" display="full" widget="badge"/>
            <field name="x_gender" display="full" widget="badge"/>
            <field name="x_owner" display="full"/>
            <field name="x_pets_line_ids" display="full" widget="statinfo" string=" - (Consultations)" options="{}"/>
          </t>
        </templates>
      </kanban>
    </field>
  </record>  
  <record id="list_view_for_x_pets_line_model" model="ir.ui.view">
