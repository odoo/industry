<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id="rental_order_kanban_custom" model="ir.ui.view">
    <field name="name">rental.order.kanban.view.machine_tool_rental</field>
    <field name="inherit_id" ref="sale_renting.rental_order_view_kanban"/>
    <field name="model">sale.order</field>
    <field name="mode">extension</field>
    <field name="priority">160</field>
    <field name="type">kanban</field>
    <field name="active" eval="True"/>
    <field name="arch" type="xml">
      <xpath expr="//kanban[1]" position="attributes">
        <attribute name="default_group_by">rental_status</attribute>
      </xpath>
    </field>
  </record>
  <record id="stock_location_route_form_custom" model="ir.ui.view">
    <field name="name">stock.location.route.form.view.machine_tool_rental</field>
    <field name="inherit_id" ref="stock.stock_location_route_form_view"/>
    <field name="mode">extension</field>
    <field name="model">stock.route</field>
    <field name="priority">160</field>
    <field name="active" eval="True"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='rule_ids']//field[@name='sequence']" position="after">
        <field name="name" optional="show"/>
      </xpath>
    </field>
  </record>
  <record id="stock_rule_list_custom" model="ir.ui.view">
    <field name="name">stock.rule.list.view.machine_tool_rental</field>
    <field name="inherit_id" ref="stock.view_stock_rule_tree"/>
    <field name="mode">extension</field>
    <field name="model">stock.rule</field>
    <field name="active" eval="True"/>
    <field name="priority">99</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='action']" position="before">
        <xpath expr="//field[@name='name']" position="move"/>
      </xpath>
      <xpath expr="//field[@name='name']" position="attributes">
        <attribute name="optional">show</attribute>
      </xpath>
    </field>
  </record>
  <record id="stock_storage_category_form_custom_view" model="ir.ui.view">
    <field name="name">stock.storage.category.form.view.machine_tool_rental</field>
    <field name="inherit_id" ref="stock.stock_storage_category_form"/>
    <field name="mode">extension</field>
    <field name="model">stock.storage.category</field>
    <field name="active" eval="True"/>
    <field name="priority">99</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='max_weight']/.." position="after">
        <field name="x_serial_status"/>
      </xpath>
    </field>
  </record>
  <record id="res_partner_form_view_custom" model="ir.ui.view">
    <field name="arch" type="xml">
      <xpath expr="//button[@name='sale.act_res_partner_2_sale_order']" position="after">
        <button class="oe_stat_button" icon="fa-envelope" type="action" name="%(to_invoice_act_window)d">
          <div class="o_form_field o_stat_info">
            <span class="o_stat_value">
              <field name="x_amount_to_invoice" widget='monetary'/>
            </span>
            <span class="o_stat_text">To Invoice</span>
          </div>
        </button>
      </xpath>
      <xpath expr="//div[@name='warning_tax']" position="before">
        <header>
          <button string="Consolidated Down payment" type="action" name="%(consolidated_down_payment_server_action)d"/>
        </header>
      </xpath>
    </field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="mode">extension</field>
    <field name="model">res.partner</field>
    <field name="active" eval="True"/>
    <field name="name">res.partner.form.view.machine_tool_rental</field>
    <field name="priority">99</field>
    <field name="type">form</field>
  </record>
  <record id="rental_order_form_view_custom" model="ir.ui.view">
    <field name="arch" type="xml">
      <xpath expr="//field[@name='rental_start_date']" position="attributes">
        <attribute name="readonly">invoice_count != 0</attribute>
      </xpath>
    </field>
    <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
    <field name="mode">extension</field>
    <field name="model">sale.order</field>
    <field name="name">rental.order.form.view.machine_tool_rental</field>
    <field name="priority">160</field>
    <field name="type">form</field>
    <field name="active" eval="True"/>
  </record>
</odoo>
