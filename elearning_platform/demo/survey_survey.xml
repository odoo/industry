<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="survey.survey_feedback" model="survey.survey" forcecreate="1">
        <field name="title">Feedback Form</field>
        <field name="user_id" ref="base.user_admin"/>
        <field name="description"><![CDATA[<p>This survey allows you to give a feedback about your experience with our products.
    Filling it helps us improving your experience.</p>]]></field>
        <field name="questions_layout">page_per_section</field>
        <field name="users_can_go_back" eval="True"/>
        <field name="scoring_type">no_scoring</field>
    </record>
    <record id="website_slides_survey.furniture_certification" model="survey.survey" forcecreate="1">
        <field name="title">Furniture Creation Certification</field>
        <field name="description"><![CDATA[<p>Test your furniture knowledge!</p>]]></field>
        <field name="user_id" ref="base.user_admin"/>
        <field name="users_login_required" eval="True"/>
        <field name="users_can_go_back" eval="True"/>
        <field name="certification" eval="True"/>
        <field name="scoring_type">scoring_with_answers</field>
        <field name="is_attempts_limited" eval="True"/>
        <field name="attempts_limit">3</field>
        <field name="certification_mail_template_id" ref="survey.mail_template_certification"/>
    </record>
</odoo>
