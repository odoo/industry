    <record id="eyewear_shop.odoo_studio_studio_c_4a8552e9-889a-44a8-8999-c4154f616da5" model="ir.ui.view">
        <field name="name">Odoo Studio: eyewear_shop.studio_report_docume_020f4c75-5290-4ff4-bc49-e06128a7289b_document customization</field>
        <field name="inherit_id" ref="eyewear_shop.studio_report_docume_020f4c75-5290-4ff4-bc49-e06128a7289b"/>
        <field name="key">gen_key.136767</field>
        <field name="mode">extension</field>
        <field name="priority">99</field>
        <field name="type">qweb</field>
        <field name="arch" type="xml">
            <xpath expr="/t/t/div" position="inside">
                <div class="row">
                    <div class="col h2">
                        <span>Patient Details</span>
                    </div>
                </div>
                <div class="row">
                    <span t-field="doc.name"/>
                    <br/>
                    <span t-field="doc.street"/>
                    <br/>
                    <span t-if="doc.mobile" t-field="doc.mobile"/>
                    <br/>
                    <span t-if="doc.email" t-field="doc.email"/>
                    <br/>
                </div>
                <div class="row">
                    <div class="col h2">
                        <span>Eye Test Results</span>
                    </div>
                </div>
            </xpath>
            <xpath expr="/t/t/div" position="after">
                <div class="row">
                    <table>
                        <tr>
                            <td/>
                            <td>Sph</td>
                            <td>Cyl</td>
                            <td>Axis</td>
                            <td>Add</td>
                            <td>PD</td>
                        </tr>
                        <tr>
                            <td>OD</td>
                            <td>
                                <span t-field="doc.x_studio_od_spherical"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_od_cylindrical"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_od_axis"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_od_add_1"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_od_pd"/>
                            </td>
                        </tr>
                        <tr>
                            <td>OS</td>
                            <td>
                                <span t-field="doc.x_studio_os_spherical"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_od_cylindrical_1"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_os_axis"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_os_add"/>
                            </td>
                            <td>
                                <span t-field="doc.x_studio_os_pd"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <br/>
                <div class="row">
                    <div class="col h4">
                        <span>Glossary of Eye Terms</span>
                    </div>
                </div>
                <div class="row">
                    <table>
                        <tr>
                            <td>The acronyms OS and OD respectively refer to Oculus Sinister and Oculus Dester. Oculus means eye and sinister, left, whereas dester is right.</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>TLE or OS (Left Eye): Refers to your left eye prescription</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>RE or OD (Right Eye): Refers to your right eye prescription</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>SPH (Sphere of the eye): The lens' ability to refract light</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>CYL (Cylinder of the eye): Correction number needed for astigmatism</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>Diopters: Measurement units used to determine the optical power of the lens</td>
                        </tr>
                        <tr>
                            <td>
                                <br/>
                            </td>
                        </tr>
                        <tr>
                            <td>ADD Measurement: This is your reading addition and relates to the amount of additional correction needed to focus at close distances.</td>
                        </tr>
                    </table>
                </div>
            </xpath>
        </field>
    </record>
    <record id="eyewear_shop.studio_main_report_499f31ae-5beb-4d3d-9f86-162c6859e5c9" model="ir.ui.view">
        <field name="name">eyewear_shop.studio_report_docume_020f4c75-5290-4ff4-bc49-e06128a7289b</field>
