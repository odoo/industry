    <record id="eyewear_shop.odoo_studio_res_part_1cab9e3a-8d01-4047-a349-3358318f4e0b" model="ir.ui.view">
        <field name="name">Odoo Studio: res.partner.form customization</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="mode">extension</field>
        <field name="model">res.partner</field>
        <field name="priority">360</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='contact_addresses']/field[@name='child_ids']/form[1]" position="after">
                <tree string="Contacts" sample="1" multi_edit="1">
                    <field name="display_name" string="Name"/>
                    <field name="function" invisible="1"/>
                    <field name="phone" class="o_force_ltr" optional="show"/>
                    <field name="mobile" optional="hide"/>
                    <field name="email" optional="show"/>
                    <field name="user_id" optional="show" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                    <field name="activity_ids" optional="show" widget="list_activity"/>
                    <field name="city" optional="show"/>
                    <field name="state_id" optional="hide" readonly="1"/>
                    <field name="country_id" optional="show" readonly="1"/>
                    <field name="vat" optional="hide" readonly="1"/>
                    <field name="category_id" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    <field name="is_company" invisible="1"/>
                    <field name="parent_id" invisible="1" readonly="1"/>
                    <field name="active" invisible="1"/>
                </tree>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Glasses Rx" name="studio_page_va_1h7fns87e">
                    <group name="studio_group_va">
                        <group name="studio_group_va_left">
                            <field name="x_studio_od_spherical" string="OD (Spherical)" widget="float"/>
                            <field name="x_studio_od_cylindrical" string="OD (Cylindrical)"/>
                            <field name="x_studio_od_axis" string="OD (Axis)"/>
                            <field name="x_studio_od_add_1" string="OD (ADD)"/>
                            <field name="x_studio_od_pd" string="OD (PD)"/>
                        </group>
                        <group name="studio_group_va_right">
                            <field name="x_studio_os_spherical" string="OS (Spherical)"/>
                            <field name="x_studio_od_cylindrical_1" string="OS (Cylindrical)"/>
                            <field name="x_studio_os_axis" string="OS (Axis)"/>
                            <field name="x_studio_os_add" string="OS (ADD)"/>
                            <field name="x_studio_os_pd" string="OS (PD)"/>
                        </group>
                    </group>
                </page>
                <page string="Lenses Rx" name="studio_page_7ai_1h89e711h">
                    <group name="studio_group_7ai">
                        <group name="studio_group_7ai_left">
                            <field name="x_studio_float_field_3rr_1h89edh2e" string="RIGHT OD (POWER)"/>
                            <field name="x_studio_od_add_2" string="RIGHT OD (ADD)"/>
                            <field name="x_studio_od_bc" string="RIGHT OD (BC)"/>
                            <field name="x_studio_od_dia" string="RIGHT OD (DIA)"/>
                        </group>
                        <group name="studio_group_7ai_right">
                            <field name="x_studio_os_power" string="LEFT OS (POWER)"/>
                            <field name="x_studio_os_add_1" string="LEFT OS (ADD)"/>
                            <field name="x_studio_os_bc" string="LEFT OS (BC)"/>
                            <field name="x_studio_os_dia" string="LEFT OS (DIA)"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
