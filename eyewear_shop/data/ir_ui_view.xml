<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="odoo_crm_lead_form_customization" model="ir.ui.view">
        <field name="name">crm.lead.form.customization.eyewear</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="mode">extension</field>
        <field name="model">crm.lead</field>
        <field name="active" eval="True"/>
        <field name="priority">160</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page string="Glasses Rx">
                    <group>
                        <group>
                            <field name="x_od_spherical"/>
                            <field name="x_od_cylindrical"/>
                            <field name="x_od_axis"/>
                            <field name="x_od_add"/>
                            <field name="x_od_pd"/>
                        </group>
                        <group>
                            <field name="x_os_spherical"/>
                            <field name="x_os_cylindrical"/>
                            <field name="x_os_axis"/>
                            <field name="x_os_add"/>
                            <field name="x_os_pd"/>
                        </group>
                    </group>
                </page>
                <page string="Lens Rx">
                    <group>
                        <group>
                            <field name="x_right_od_power"/>
                            <field name="x_right_od_add"/>
                            <field name="x_right_od_bc"/>
                            <field name="x_right_od_dia"/>
                        </group>
                        <group>
                            <field name="x_left_os_power"/>
                            <field name="x_left_os_add"/>
                            <field name="x_left_os_bc"/>
                            <field name="x_left_os_dia"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="odoo_res_partner_form_customization_eyewear" model="ir.ui.view">
        <field name="name">res.partner.form.customization.eyewear</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="mode">extension</field>
        <field name="model">res.partner</field>
        <field name="active" eval="True"/>
        <field name="priority">360</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//notebook[1]" position="inside">
                <page string="Glasses Rx">
                    <group>
                        <group>
                            <field name="x_od_spherical"/>
                            <field name="x_od_cylindrical"/>
                            <field name="x_od_axis"/>
                            <field name="x_od_add_1"/>
                            <field name="x_od_pd"/>
                        </group>
                        <group>
                            <field name="x_os_spherical"/>
                            <field name="x_os_cylindrical_1"/>
                            <field name="x_os_axis"/>
                            <field name="x_os_add"/>
                            <field name="x_os_pd"/>
                        </group>
                    </group>
                </page>
                <page string="Lenses Rx">
                    <group>
                        <group>
                            <field name="x_right_od_power"/>
                            <field name="x_od_add_2"/>
                            <field name="x_od_bc"/>
                            <field name="x_od_dia"/>
                        </group>
                        <group>
                            <field name="x_os_power"/>
                            <field name="x_os_add_1"/>
                            <field name="x_os_bc"/>
                            <field name="x_os_dia"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="eye_test_report" model="ir.ui.view">
        <field name="name">eyewear_shop.report_eye_test_document</field>
        <field name="key">eyewear_shop.report_eye_test_document</field>
        <field name="type">qweb</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <t t-name="report_document">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col h2">
                                <span>Patient Details</span>
                            </div>
                        </div>
                        <div class="row">
                            <t t-if="doc.name">
                                <span t-field="doc.name"/>
                                <br/>
                            </t>
                            <t t-if="doc.street">
                                <span t-field="doc.street"/>
                                <br/>
                            </t>
                            <t t-if="doc.mobile">
                                <span t-field="doc.mobile"/>
                                <br/>
                            </t>
                            <t t-if="doc.email">
                                <span t-field="doc.email"/>
                                <br/>
                            </t>
                        </div>
                        <div class="row">
                            <div class="col h2">
                                <span>Eye Test Results</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <table>
                            <tr>
                                <td/>
                                <td>Sph</td>
                                <td>Cyl</td>
                                <td>Axis</td>
                                <td>Add</td>
                                <td>PD</td>
                            </tr>
                            <tr>
                                <td>OD</td>
                                <td>
                                    <span t-field="doc.x_od_spherical"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_od_cylindrical"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_od_axis"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_od_add_1"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_od_pd"/>
                                </td>
                            </tr>
                            <tr>
                                <td>OS</td>
                                <td>
                                    <span t-field="doc.x_os_spherical"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_os_cylindrical_1"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_os_axis"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_os_add"/>
                                </td>
                                <td>
                                    <span t-field="doc.x_os_pd"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col h4">
                            <span>Glossary of Eye Terms</span>
                        </div>
                    </div>
                    <div class="row">
                        <table>
                            <tr>
                                <td>The acronyms OS and OD respectively refer to Oculus Sinister and Oculus Dester. Oculus means eye and sinister, left, whereas dester is right.</td>
                            </tr>
                            <tr>
                                <td>TLE or OS (Left Eye): Refers to your left eye prescription</td>
                            </tr>
                            <tr>
                                <td>RE or OD (Right Eye): Refers to your right eye prescription</td>
                            </tr>
                            <tr>
                                <td>SPH (Sphere of the Eye): The lens ability to refract light</td>
                            </tr>
                            <tr>
                                <td>CYL (Cylinder of the eye): Correction number needed for astigmatism</td>
                            </tr>
                            <tr>
                                <td>Diopters: Measurement units used to determine the optical power of the lens</td>
                            </tr>
                            <tr>
                                <td>ADD Measurement: This is your reading addition and relates to the amount of additional correction needed to focus at close distances.</td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </field>
    </record>
    <record id="main_report_test_report" model="ir.ui.view">
        <field name="name">eyewear.shop.eye.test.report</field>
        <field name="key">eyewear_shop.eye_test_report</field>
        <field name="type">qweb</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <t t-name="main_report">
                <t t-call="web.html_container">
                    <t t-foreach="docs" t-as="doc">
                        <t t-call="eyewear_shop.report_eye_test_document"/>
                    </t>
                </t>
            </t>
        </field>
    </record>
</odoo>
