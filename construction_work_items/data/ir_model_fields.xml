    <record id="x_unit_cost_field_x_bill_of_materials" model="ir.model.fields">
        <field name="name">x_unit_cost</field>
        <field name="compute"><![CDATA[for record in self:
        total = 0
        for line in record.x_bill_of_materials_line_ids:
            total += line.x_unit_cost * line.x_quantity
        record['x_unit_cost'] = total / record.x_quantity]]></field>
        <field name="ttype">monetary</field>
