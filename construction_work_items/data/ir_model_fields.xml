    <record id="x_work_item_able_field_sale_order_line" model="ir.model.fields">
        <field name="compute"><![CDATA[
for record in self:
    record['x_work_item_able'] = 0 < len(record.product_id.x_work_item_ids) or record.x_work_item_ids
]]></field>
        <field name="ttype">boolean</field>
        <field name="depends">product_id.x_work_item_ids</field>
        <field name="field_description">Work Item-able</field>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="name">x_work_item_able</field>
