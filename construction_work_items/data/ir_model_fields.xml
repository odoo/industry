    <record id="x_margin_field_x_bill_of_materials_line" model="ir.model.fields">
        <field name="name">x_margin</field>
        <field name="compute"><![CDATA[for record in self:
        if record.x_unit_price > 0 : record['x_margin'] = (record.x_unit_price - record.x_unit_cost) / record.x_unit_price
        else: record['x_margin'] = False]]></field>
        <field name="ttype">float</field>
        <field name="depends">x_unit_price, x_unit_cost</field>
        <field name="field_description">Margin</field>
        <field name="model_id" ref="x_bill_of_materials_line_model"/>
        <field name="readonly" eval="True"/>
        <field name="selectable" eval="False"/>
        <field name="store" eval="False"/>
    </record>

