<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="business_view" model="ir.ui.view">
        <field name="name">Business</field>
        <field name="key">concert_halls.business</field>
        <field name="type">qweb</field>
        <field name="active" eval="True"/>
        <field name="website_id" ref="website.default_website"/>
        <field name="arch" type="xml">
            <t t-name="website.business">
                <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_text_block pt40 o_cc pb0 o_colored_level o_cc1" data-snippet="s_text_block">
                    <div class="container s_allow_columns">
                        <h1 style="text-align: center;">Business</h1>
                    </div>
                    </section>
                    <section class="s_text_block pt40 pb40 o_cc o_colored_level o_cc1" data-snippet="s_text_block">
                    <div class="s_allow_columns o_container_small">
                        <p>Looking to host an unforgettable event in the heart of Brussels? At MyConcertHall, we open our iconic venue to businesses, organizations, and professionals seeking a unique setting for conferences, product launches, staff parties, or client receptions. With top-tier facilities, experienced staff, and a vibrant cultural backdrop, we turn your ideas into memorable experiences.</p>
                    </div>
                    </section>
                    <section class="s_text_block pt40 o_cc pb40 o_colored_level o_cc4" data-snippet="s_text_block">
                    <div class="s_allow_columns container">
                        <h2 style="text-align: left;">Get in touch</h2>
                    </div>
                    </section>
                    <section class="s_website_form pt16 pb16 o_colored_level o_cc o_cc4" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-pre-fill="true" data-model_name="crm.lead" data-success-mode="redirect" data-success-page="/contactus-thank-you">
                        <div class="s_website_form_rows row s_col_no_bgcolor">
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oo9dvia1klbq">
                                <span class="s_website_form_label_content">Your Name</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <input class="form-control s_website_form_input" type="text" name="contact_name" required="1" data-fill-with="name" id="oo9dvia1klbq"/>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="tel">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="oiprhn1l9afq">
                                <span class="s_website_form_label_content">Phone Number</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <input class="form-control s_website_form_input" type="tel" name="phone" data-fill-with="phone" id="oiprhn1l9afq" required=""/>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="email">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ovuhi7l8n91r">
                                <span class="s_website_form_label_content">Your Email</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <input class="form-control s_website_form_input" type="email" name="email_from" required="1" data-fill-with="email" id="ovuhi7l8n91r"/>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required" data-type="selection">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-sm-auto s_website_form_label" style="width: 200px" for="o3y641ou74uy">
                                <span class="s_website_form_label_content">Interested in</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <div class="row s_col_no_resize s_col_no_bgcolor s_website_form_multiple" data-name="tag_ids" data-display="horizontal">
                                    <div class="radio col-12 col-lg-4 col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="s_website_form_input form-check-input" id="o3y641ou74uy0" name="tag_ids" value="*venue_booking_tag*" data-fill-with="undefined" required=""/>
                                        <label class="form-check-label s_website_form_check_label" for="o3y641ou74uy0">Venue Booking</label>
                                    </div>
                                    </div>
                                    <div class="radio col-12 col-lg-4 col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="s_website_form_input form-check-input" id="o3y641ou74uy1" name="tag_ids" value="*recording_and_streaming_tag*" required=""/>
                                        <label class="form-check-label s_website_form_check_label" for="o3y641ou74uy1">Recording &amp;amp; Streaming</label>
                                    </div>
                                    </div>
                                    <div class="radio col-12 col-lg-4 col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="s_website_form_input form-check-input" id="o3y641ou74uy2" name="tag_ids" value="*become_a_partner_tag*" required=""/>
                                        <label class="form-check-label s_website_form_check_label" for="o3y641ou74uy2">Become a Partner</label>
                                    </div>
                                    </div>
                                    <div class="radio col-12 col-lg-4 col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="s_website_form_input form-check-input" id="o3y641ou74uy3" name="tag_ids" value="*want_to_talk_tag*" required=""/>
                                        <label class="form-check-label s_website_form_check_label" for="o3y641ou74uy3">Want to Talk</label>
                                    </div>
                                    </div>
                                    <div class="radio col-12 col-lg-4 col-md-6">
                                    <div class="form-check">
                                        <input type="radio" class="s_website_form_input form-check-input" id="o3y641ou74uy4" name="tag_ids" value="*other_tag*" required=""/>
                                        <label class="form-check-label s_website_form_check_label" for="o3y641ou74uy4">Other</label>
                                    </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ogefbuvgt0n">
                                <span class="s_website_form_label_content">Your Company</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <input class="form-control s_website_form_input" type="text" name="partner_name" required="1" data-fill-with="commercial_company_name" id="ogefbuvgt0n"/>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="o9mdu31fmlkq">
                                <span class="s_website_form_label_content">Subject</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <input class="form-control s_website_form_input" type="text" name="name" required="" id="o9mdu31fmlkq"/>
                                </div>
                            </div>
                            </div>
                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_required" data-type="text">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="okif0w3caayg">
                                <span class="s_website_form_label_content">Your Question</span>
                                <span class="s_website_form_mark"> *</span>
                                </label>
                                <div class="col-sm">
                                <textarea class="form-control s_website_form_input" name="description" required="1" id="okif0w3caayg" rows="3"/>
                                </div>
                            </div>
                            </div>
                            <div class="mb-0 py-2 col-12 s_website_form_submit text-end s_website_form_no_submit_label" data-name="Submit Button"><div style="width: 200px;" class="s_website_form_label"/><span id="s_website_form_result"/>
                                ﻿<a href="#" role="button" class="btn btn-primary s_website_form_send">Submit</a>﻿
                            </div>
                        </div>
                        </form>
                    </div>
                    </section>
                </div>
                </t>
            </t>
        </field>
    </record>
    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env.ref('concert_halls.business_view').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('concert_halls.business_view').arch.replace(
            '*become_a_partner_tag*', str(obj().env.ref('concert_halls.crm_tag_1').id)).replace(
            '*venue_booking_tag*', str(obj().env.ref('concert_halls.crm_tag_2').id)).replace(
            '*recording_and_streaming_tag*', str(obj().env.ref('concert_halls.crm_tag_3').id)).replace(
            '*other_tag*', str(obj().env.ref('concert_halls.crm_tag_4').id)).replace(
            '*want_to_talk_tag*', str(obj().env.ref('concert_halls.crm_tag_5').id))
        }"/>
    </function>
    <function model="ir.model.fields" name="formbuilder_whitelist">
      <value eval="'crm.lead'"/>
      <value eval="['tag_ids']"/>
    </function>
</odoo>
