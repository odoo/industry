<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <function model="pos.config" name="load_onboarding_retail_scenario">
        <value name="with_demo_data" model="ir.module.module" eval="obj().search([('name', '=', 'concert_halls')]).demo"/>
    </function>
    <record id="point_of_sale.pos_config_retail" model="pos.config" forcecreate="1">
        <field name="name">MyConcertHall - Ticketing</field>
        <field name="iface_available_categ_ids" eval="[(6, 0, [ref('pos_event.pos_category_event')])]"/>
        <field name="tip_product_id" eval="False"/>
        <field name="limit_categories" eval="True"/>
    </record>

    <function model="pos.config" name="load_onboarding_bar_scenario">
        <value name="with_demo_data" model="ir.module.module" eval="obj().search([('name', '=', 'concert_halls')]).demo"/>
    </function>
    <record id="pos_restaurant.pos_config_main_bar" model="pos.config" forcecreate="1">
        <field name="name">MyConcertHall - Bar</field>
        <field name="iface_available_categ_ids" eval="[(6, 0, [ref('pos_category_2'), ref('pos_category_3')])]"/>
        <field name="tip_product_id" eval="False"/>
        <field name="limit_categories" eval="True"/>
  </record>
</odoo>
