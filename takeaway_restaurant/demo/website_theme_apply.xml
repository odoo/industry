<?xml version='1.0' encoding='UTF-8'?>
<odoo>
	<function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_orchid', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

  <function model="web_editor.assets" name="make_scss_customization" context="{'website_id': ref('website.default_website')}">
      <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'"/>
      <value eval="{
        'menu-custom': '#FFFFFF',
        'menu': '3',
        'o-color-2': '#E7BF1D',
        'o-color-1': '#9B2717',
      }"/>
  </function>

  <function model="web_editor.assets" name="make_scss_customization">
        <value eval="'/website/static/src/scss/options/user_values.scss'" />
        <value eval="{
            'menu-gradient': 'NULL',
            'menu-secondary-gradient': 'null',
            'footer-gradient': 'null',
            'copyright-gradient': 'null',
            'o-cc1-bg-gradient': 'null',
            'o-cc2-bg-gradient': 'null',
            'o-cc3-bg-gradient': 'null',
            'o-cc4-bg-gradient': 'null',
            'o-cc5-bg-gradient': 'null',
            'font': 'null',
            'headings-font': 'null',
            'navbar-font': 'null',
            'buttons-font': 'null',
            'color-palettes-number': 'null',
            'color-palettes-name': 'default-22',
            'btn-ripple': 'null',
            'header-template': 'boxed',
            'footer-template': 'null',
            'footer-scrolltop': 'null',
            'header-links-style': 'pills',
            'header-scroll-effect': 'disappears',
            'menu-box-shadow': 'rgba(0, 0, 0, 0.15) 0px 8px 16px 0px',
            'btn-border-radius': '6.25rem',
        }"/>
  </function>

  <function model="web_editor.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
    <value eval="{
          'success': 'null',
          'info': 'null',
          'warning': 'null',
          'danger': 'null',
      }"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('takeaway_restaurant.homepage').arch}"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.template_footer_descriptive').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('takeaway_restaurant.ir_ui_view_3205').arch}"/>
  </function>

  <data noupdate="1">
    <function model="website.menu" name="unlink">
      <value model="website.menu" eval="obj().search([('website_id', '=', ref('website.default_website')), ('url', '=', '/contactus')]).id" />
    </function>
  </data>

</odoo>
