<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_nano', raise_if_not_found=False) or ref('base.module_theme_default')]"/>

  <function model="website.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/user_values.scss'" />
    <value eval="{
      'menu-gradient': 'null',
      'menu-secondary-gradient': 'null',
      'footer-gradient': 'null',
      'copyright-gradient': 'null',
      'o-cc1-bg-gradient': 'null',
      'o-cc2-bg-gradient': 'null',
      'o-cc3-bg-gradient': 'null',
      'o-cc4-bg-gradient': 'null',
      'o-cc5-bg-gradient': 'null',
      'font': 'null',
      'headings-font': 'null',
      'navbar-font': 'null',
      'buttons-font': 'null',
      'color-palettes-number': 'null',
      'color-palettes-name': 'default-7',
      'btn-ripple': 'null',
      'header-template': 'default',
      'footer-template': 'null',
      'footer-scrolltop': 'null',
      'header-links-style': 'default',
    }"/>
  </function>
  <function model="website.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/colors/user_theme_color_palette.scss'"/>
    <value eval="{
        'success': 'null',
        'info': 'null',
        'warning': 'null',
        'danger': 'null',
      }"/>
  </function>
  <function model="website.assets" name="make_scss_customization">
    <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'"/>
    <value eval="{
        'footer': 5,
      }"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('spa_resort.homepage').arch.replace(
        '*gift_card_product*', str(obj().env.ref('loyalty.gift_card_product_50').website_url))
    }"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env.ref('spa_resort.massages_treatments').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('spa_resort.massages_treatments').arch.replace(
    '*deep_tissue_massage_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_1').website_url)).replace(
    '*radiance_facial_massage_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_2').website_url)).replace(
    '*duo_massage_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_3').website_url))
    }"/>
  </function>

  <function model="ir.ui.view" name="write">
    <value model="ir.ui.view" eval="obj().env.ref('spa_resort.wellness_access').id"/>
    <value model="ir.ui.view" eval="{'arch': obj().env.ref('spa_resort.wellness_access').arch.replace(
    '*day_pass_serenity_escape_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_4').website_url)).replace(
    '*golden_age_retreat_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_5').website_url)).replace(
    '*student_wellness_break_appointment_type*', str(obj().env.ref('spa_resort.appointment_type_6').website_url)).replace(
    '*10_Day_wellness_pass_product*', str(obj().env.ref('spa_resort.product_product_21').website_url))
    }"/>
  </function>

  <data noupdate="1">
    <function model="website.menu" name="unlink">
      <value model="website.menu" search="[('website_id', '=', ref('website.default_website')), ('url', '=', '/appointment')]"/>
    </function>
    <function model="website.menu" name="unlink">
      <value model="website.menu" search="[('website_id', '=', ref('website.default_website')), ('url', '=', '/shop')]"/>
    </function>
  </data>

</odoo>
