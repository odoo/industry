<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <function name="button_choose_theme" model="ir.module.module" eval="[ref('base.module_theme_orchid', raise_if_not_found=False) or ref('base.module_theme_default')]"/>
    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env['website'].with_context(website_id=obj().env.ref('website.default_website').id).viewref('website.homepage').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('tattoo_shop.homepage').arch.replace(
            '*flash_tattoo_appointment*', str(obj().env.ref('tattoo_shop.appointment_type_1').id)).replace(
            '*piercing_appointment*', str(obj().env.ref('tattoo_shop.appointment_type_2').id))
        }"/>
    </function>
    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env.ref('tattoo_shop.ir_ui_view_2930').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('tattoo_shop.ir_ui_view_2930').arch.replace(
            '*book_session*', str(obj().env.ref('tattoo_shop.appointment_type_1').id))
        }"/>
    </function>
    <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env.ref('tattoo_shop.flash_tattoos').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('tattoo_shop.flash_tattoos').arch.replace(
            '*flash_tattoo_appointment*', str(obj().env.ref('tattoo_shop.appointment_type_1').id))
        }"/>
    </function>
     <function model="ir.ui.view" name="write">
        <value model="ir.ui.view" eval="obj().env.ref('tattoo_shop.contact_us').id"/>
        <value model="ir.ui.view" eval="{'arch': obj().env.ref('tattoo_shop.contact_us').arch.replace(
            '*tattoo_tag*', str(obj().env.ref('tattoo_shop.crm_tag_1').id)).replace(
            '*tattoo_removal_tag*', str(obj().env.ref('tattoo_shop.crm_tag_2').id)).replace(
            '*piercing_tag*', str(obj().env.ref('tattoo_shop.crm_tag_3').id)).replace(
            '*general_question_tag*', str(obj().env.ref('tattoo_shop.crm_tag_4').id)).replace(
            '*explorative_work_tag*', str(obj().env.ref('tattoo_shop.crm_tag_5').id)).replace(
            '*other_tag*', str(obj().env.ref('sales_team.categ_oppor8').id))
        }"/>
    </function>
    <function model="web_editor.assets" name="make_scss_customization">
        <value eval="'/website/static/src/scss/options/colors/user_color_palette.scss'"/>
        <value eval="{'o-color-1': '#000000', 'o-color-2': '#c0392b', 'o-color-3': '#FFFFFF', 'o-color-4': '#FFFFFF', 'o-color-5': '#212529'}"/>
    </function>
</odoo>
