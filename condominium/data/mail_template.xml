<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <record id="mail_template_1" model="mail.template">
        <field name="name">Condominium: Condominium Balance Sheet</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="subject">New balance sheet</field>
        <field name="body_html"><![CDATA[
        <div style="background:#F0F0F0; color:#515166; padding:10px 0; font-family:Arial, Helvetica, sans-serif; font-size:14px;">
            <table style="width:600px; margin:0 auto; background:white; border:1px solid #e1e1e1; color:#515166; font-size:14px; font-family:Arial, Helvetica, sans-serif; border-collapse:collapse;">
                <tbody>
                    <tr>
                        <td style="padding:15px 20px 10px 20px;">
                            <p style="margin:0 0 16px 0;">Hi,</p>
                            <p style="margin:0 0 16px 0;">
                                Please find attached your balance sheet as of 12/31/2025.
                            </p>
                            <p style="margin:0 0 16px 0;">Kind regards.</p>
                        </td>
                    </tr>
                    <tr data-o-mail-quote-container="1">
                        <td style="padding:15px 20px 10px 20px;" t-out="object.user_id.signature or ''" data-o-mail-quote="1">
                            --<br data-o-mail-quote="1"/>Mitchell Admin
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    ]]>        </field>
    </record>
    <record id="mail_template_2" model="mail.template">
        <field name="name">Condominium: General Meeting Agenda</field>
        <field name="model_id" ref="calendar.model_calendar_event"/>
        <field name="subject">General Meeting Report</field>
        <field name="email_from">{{ (user.email_formatted or object.user_id.email_formatted) }}</field>
        <field name="lang">{{ object.partner_id.lang }}</field>
        <field name="use_default_to" eval="False"/>
        <field name="report_template_ids" eval="[(6, 0, [ref('calendar_event_general_meeting_agenda')])]"/>
        <field name="body_html"><![CDATA[
        <div style="background:#F0F0F0; color:#515166; padding:10px 0; font-family:Arial, Helvetica, sans-serif; font-size:14px;">
            <table style="width:600px; margin:0 auto; background:white; border:1px solid #e1e1e1; color:#515166; font-size:14px; font-family:Arial, Helvetica, sans-serif; border-collapse:collapse;">
                <tbody>
                    <tr>
                        <td style="padding:15px 20px 10px 20px;">
                            <p style="margin:0 0 16px 0;">Hi,</p>
                            <p style="margin:0 0 16px 0;">
                                Please find attached the agenda for the upcoming meeting:
                                <t t-out="object.name or ''">General Meeting</t>
                            </p>
                            <p style="margin:0 0 16px 0;">Kind regards.</p>
                        </td>
                    </tr>
                    <tr data-o-mail-quote-container="1">
                        <td style="padding:15px 20px 10px 20px;" t-out="object.user_id.signature or ''" data-o-mail-quote="1">
                            --<br data-o-mail-quote="1"/>Mitchell Admin
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    ]]>        </field>
    </record>
