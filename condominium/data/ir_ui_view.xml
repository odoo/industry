<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="default_form_view_building" model="ir.ui.view">
        <field name="name">Default form view for x_buildings</field>
        <field name="model">x_buildings</field>
        <field name="type">form</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet string="Buildings">
                    <div name="button_box" class="oe_button_box">
                        <button class="oe_stat_button" icon="fa-home" type="action" name="%(props_build_act_window)d">
                            <field widget="statinfo" name="x_x_building_account_analytic_account_count" string="Properties"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-home" type="action" name="condominium.properties_7a834342-99a7-472f-9f32-b6c98fee04bb">
                            <field widget="statinfo" name="x_account_building_account_analytic_account_count" string="Properties"/>
                          </button>
                    </div>
                    <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="x_active"/>
                    <field name="x_image" class="oe_avatar" widget="image"/>
                    <div class="oe_title">
                        <h1>
                            <field name="x_name" required="1" placeholder="Name or reference..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <span class="fw-bold">Address</span>
                            <div class="o_address_format">
                                <field name="x_street" placeholder="Street..." class="o_address_street"/>
                                <field name="x_street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="x_city" placeholder="City" class="o_address_city"/>
                                <field name="x_state" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                <field name="x_zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="x_country" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                            </div>
                        </group>
                        <group>
                            <field name="x_tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="x_notes" placeholder="Type down your notes here..." nolabel="1" colspan="2"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
  <record id="analytic.view_account_analytic_account_kanban" model="ir.ui.view"  forcecreate="1">
    <field name="name">account.analytic.account.kanban</field>
    <field name="model">account.analytic.account</field>
    <field name="active" eval="True"/>
    <field name="type">kanban</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_mobile">
        <field name="currency_id"/>
        <templates>
          <t t-name="card">
            <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
              <field class="fw-bold fs-5" name="display_name"/>
            </div>
            <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                Balance: <field name="balance" widget="monetary"/>
                            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>
  <record id="odoo_studio_product__9be94e0b-2f45-4c1b-a2ce-0aebff9f82a5" model="ir.ui.view">
    <field name="name">Odoo Studio: product.pricelist.form customization</field>
    <field name="inherit_id" ref="product.product_pricelist_view"/>
    <field name="mode">extension</field>
    <field name="model">product.pricelist</field>
    <field name="active" eval="True"/>
    <field name="priority">160</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//button[@name='action_open_pricelist_report']" position="before">
          <button string="Compute Ratios" name="condominium.ir_actions_server_726" type="action" class="btn-primary"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]" position="before">
          <page string="Ratios" name="studio_page_ratios">
            <field name="x_pricelist_ratios">
              <list editable="bottom">
                <field name="x_sequence" widget="handle"/>
                <field name="x_property"/>
                <field optional="show" name="x_ratio_building" options="{'create_name_field': 'x_name'}"/>
                <field optional="show" name="x_type" options="{'create_name_field': 'x_name'}"/>
                <field name="x_owner" optional="show"/>
                <field optional="show" name="x_floor"/>
                <field name="x_area" sum="Sum of Area" optional="show"/>
                <field name="x_pricelist" sum="Sum of Ratio"/>
              </list>
            </field>
          </page>
        </xpath>
      </data>
    </field>
  </record>
  <record id="default_list_view_fo_4b0695d8-e44f-4dea-ba24-97e3a87680f1" model="ir.ui.view" >
    <field name="name">Default list view for x_ratios</field>
    <field name="model">x_ratios</field>
    <field name="active" eval="True"/>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <list>
        <field name="x_sequence" widget="handle"/>
        <field name="x_name"/>
        <field name="x_company_id" groups="base.group_multi_company"/>
      </list>
    </field>
  </record>
  <record id="default_form_view_fo_8c2be510-bad6-4e59-9ebc-227f6fd5dfcf" model="ir.ui.view">
    <field name="name">Default form view for x_ratios</field>
    <field name="model">x_ratios</field>
    <field name="active" eval="True"/>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <form>
        <header/>
        <sheet string="Ratios">
          <widget name="web_ribbon" text="Archived" bg_color="text-bg-danger" invisible="x_active"/>
          <field name="x_active" invisible="1"/>
          <div class="oe_title">
            <h1>
              <field name="x_name" required="1" placeholder="Name..."/>
            </h1>
          </div>
          <group name="studio_group_ae54a3">
            <group name="studio_group_ae54a3_left">
              <field name="x_company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
            </group>
            <group name="studio_group_ae54a3_right"/>
          </group>
        </sheet>
        <chatter/>
      </form>
    </field>
  </record>
  <record id="default_search_view__d10333b4-05e4-4233-8be4-0a73769e2580" model="ir.ui.view">
    <field name="name">Default search view for x_ratios</field>
    <field name="model">x_ratios</field>
    <field name="active" eval="True"/>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="x_name"/>
        <separator/>
        <filter string="Archived" name="archived_x_ratios" domain="[['x_active', '=', False]]"/>
        <separator/>
      </search>
    </field>
  </record>
  <record id="odoo_studio_default__b5d6716b-302a-410e-a95a-59ce797b4b01" model="ir.ui.view">
    <field name="name">Odoo Studio: Default form view for x_ratios customization</field>
    <field name="model">x_ratios</field>
    <field name="inherit_id" ref="default_form_view_fo_8c2be510-bad6-4e59-9ebc-227f6fd5dfcf"/>
    <field name="mode">extension</field>
    <field name="active" eval="True"/>
    <field name="priority">99</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='x_name']" position="replace"/>
        <xpath expr="//group[@name='studio_group_ae54a3_left']" position="inside">
          <field name="x_property" options="{&quot;create_name_field&quot;:&quot;x_name&quot;,&quot;no_create&quot;:true}"/>
          <field name="x_pricelist" options="{&quot;no_create&quot;:true}"/>
        </xpath>
        <xpath expr="//group[@name='studio_group_ae54a3_right']" position="inside">
          <xpath expr="//field[@name='x_company_id']" position="move"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_product__d272fb6c-d2b6-4245-afb0-c74d3d99b734" model="ir.ui.view">
    <field name="name">Odoo Studio: product.pricelist.list customization</field>
    <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
    <field name="mode">extension</field>
    <field name="model">product.pricelist</field>
    <field name="active" eval="True"/>
    <field name="priority">99</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//list[1]/field[@name='name']" position="attributes">
          <attribute name="string">Distribution Key</attribute>
        </xpath>
        <xpath expr="//field[@name='country_group_ids']" position="attributes">
          <attribute name="column_invisible">True</attribute>
        </xpath>
        <xpath expr="//field[@name='company_id']" position="attributes">
          <attribute name="column_invisible">True</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_sale_ord_9a2056f1-3914-4c14-9c51-d970942088c7" model="ir.ui.view">
    <field name="name">Odoo Studio: sale.order.form customization</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="mode">extension</field>
    <field name="model">sale.order</field>
    <field name="active" eval="True"/>
    <field name="priority">160</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//button[@name='action_confirm']" position="after">
          <button string="Split per Owner" name="%(ir_act_server_split_per_property)d" type="action" invisible="x_condominiums_ids or state != 'draft'"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/label[not(@name)][1]" position="attributes">
          <attribute name="string">Distribution Key</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/div[not(@name)][3]/field[@name='pricelist_id']" position="attributes">
          <attribute name="options">{"no_open":false,"no_create":true}</attribute>
          <attribute name="placeholder">Area as distribution key</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_analytic_a82ab4e6-2230-4b1e-8fd3-cf21c9fe0bd6" model="ir.ui.view">
    <field name="name">Odoo Studio: analytic.analytic.account.form customization</field>
    <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
    <field name="mode">extension</field>
    <field name="model">account.analytic.account</field>
    <field name="active" eval="True"/>
    <field name="priority">400</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//field[@name='code']" position="replace">
          <field name="x_tenant"/>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/label[1]" position="replace"/>
        <xpath expr="//button[@name='action_view_projects']" position="replace"/>
        <xpath expr="//button[@name='subscriptions_action']" position="after">
          <button class="oe_stat_button" icon="fa-home" type="action" name="condominium.properties_397b7f9d-8c61-4282-8cd4-165e23f2f9bc">
            <field widget="statinfo" name="x_parent_account_analytic_account_count" string="Properties"/>
          </button>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h1[1]/field[@name='name']" position="attributes">
          <attribute name="string">Apartment...</attribute>
        </xpath>
        <xpath expr="//field[@name='active']" position="after">
          <xpath expr="//form[1]/sheet[1]/group[@name='main']/group[2]/field[@name='company_id']" position="move"/>
          <field name="x_condominium_1"/>
          <field name="x_account_building" options="{&quot;create_name_field&quot;:&quot;x_name&quot;,&quot;no_create&quot;:true}" required="plan_id == 2"/>
          <field name="x_type" options="{'create_name_field': 'x_name'}" required="plan_id == 2"/>
        </xpath>
        <xpath expr="//field[@name='partner_id']" position="attributes">
          <attribute name="required">plan_id == 2</attribute>
          <attribute name="string">Owner</attribute>
        </xpath>
        <xpath expr="//field[@name='plan_id']" position="before">
          <field widget="many2many_tags" name="x_tags"/>
          <field name="x_parent" options="{&quot;no_create&quot;:true}" domain="[(&quot;plan_id&quot;, &quot;=&quot;, 2)]"/>
          <field name="x_floor"/>
          <field name="x_area"/>
        </xpath>
        <xpath expr="//field[@name='plan_id']" position="attributes">
          <attribute name="invisible">True</attribute>
        </xpath>
        <xpath expr="//form[1]/sheet[1]/group[@name='main']/group[1]/field[@name='company_id']" position="attributes">
          <attribute name="force_save">1</attribute>
          <attribute name="groups">base.group_no_one</attribute>
          <attribute name="readonly">True</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_account__c00d33ee-f139-456f-aa13-9bd3dd1fa39c" model="ir.ui.view">
    <field name="name">Odoo Studio: account.analytic.account.kanban customization</field>
    <field name="inherit_id" ref="analytic.view_account_analytic_account_kanban"/>
    <field name="mode">extension</field>
    <field name="model">account.analytic.account</field>
    <field name="active" eval="True"/>
    <field name="priority">99</field>
    <field name="type">kanban</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//kanban[1]/templates[1]/t[@t-name='card']/div[2]" position="replace">
          <field name="name" display="full"/>
          <field name="x_tags" display="full"/>
          <field name="x_type" display="full"/>
          <field name="partner_id" display="full" widget="many2one_avatar"/>
        </xpath>
        <xpath expr="//kanban[1]/templates[1]/t[@t-name='card']/div[1]" position="replace"/>
        <xpath expr="//kanban[1]" position="attributes">
          <attribute name="default_group_by">x_account_building</attribute>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_res_part_debe4d8b-461e-44ea-96ed-03421979fe30" model="ir.ui.view">
    <field name="name">Odoo Studio: res.partner.form customization</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="mode">extension</field>
    <field name="active" eval="True"/>
    <field name="model">res.partner</field>
    <field name="priority">1600</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
            <button class="oe_stat_button" icon="fa-home" type="action" name="condominium.properties_90329923-2672-4403-a8fb-f8e41037462d">
            <field widget="statinfo" name="x_condominium_account_analytic_account_count" string="Properties"/>
          </button>
        </xpath>
        <xpath expr="//field[@name='property_product_pricelist']" position="after">
          <field name="x_condominium_properties" widget="many2many_tags" force_save="1" readonly="True"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="odoo_studio_account__8b441c9c-e840-4e10-a72c-ff2c159fc35d" model="ir.ui.view" >
    <field name="name">Odoo Studio: account.move.form customization</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="mode">extension</field>
    <field name="active" eval="True"/>
    <field name="model">account.move</field>
    <field name="priority">160</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
      <data>
        <xpath expr="//button[@name='action_reload_ai_data']" position="after">
          <button string="Distribute Costs" name="condominium.ir_actions_server_733" type="action"/>
        </xpath>
        <xpath expr="//field[@name='invoice_vendor_bill_id']" position="after">
          <field name="x_distribution_key" options="{&quot;no_create&quot;:true}" placeholder="Area as distribution key"/>
        </xpath>
      </data>
    </field>
  </record>
  <record id="res_partner_form_view" model="ir.ui.view">
    <field name="name">Condominium form view</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="mode">extension</field>
    <field name="model">res.partner</field>
    <field name="active" eval="True"/>
    <field name="priority">160</field>
    <field name="type">form</field>
    <field name="arch" type="xml">
        <xpath expr="//button[@name='action_open_employees']" position="after">
            <button class="oe_stat_button" icon="fa-home" type="action" name="condominium.properties_90329923-2672-4403-a8fb-f8e41037462d">
              <field widget="statinfo" name="x_condominium_account_analytic_account_count" string="Properties"/>
            </button>
          </xpath>
          <xpath expr="//field[@name='property_product_pricelist']" position="after">
            <field name="x_condominium_properties" widget="many2many_tags" force_save="1" readonly="True"/>
          </xpath>
          <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
            <page string="Vendors" invisible="not ref_company_ids">
                <field name="x_vendors">
                    <list string="Contacts" sample="1" multi_edit="1" editable="bottom">
                        <field name="complete_name" string="Name"/>
                        <field name="phone" class="o_force_ltr" optional="show"/>
                        <field name="mobile" optional="hide"/>
                        <field name="email" optional="show"/>
                        <field name="user_id" optional="show" widget="many2one_avatar_user" domain="[('share', '=', False)]"/>
                        <field name="activity_ids" optional="show" widget="list_activity"/>
                        <field name="street" optional="hide"/>
                        <field name="city" optional="show"/>
                        <field name="state_id" optional="hide" readonly="1"/>
                        <field name="country_id" optional="show" readonly="1"/>
                        <field name="vat" optional="hide" readonly="1" string="VAT"/>
                        <field name="category_id" optional="hide" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    </list>
                </field>
            </page>
          </xpath>
    </field>
 </record>
</odoo>
