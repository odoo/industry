<?xml version='1.0' encoding='UTF-8'?>
<odoo noupdate="1">
    <function name="button_confirm" model="purchase.order">
        <value eval="[ref('purchase_order_1'), ref('purchase_order_3')]"/>
    </function>
    <function name="button_validate" model="stock.picking">
        <value model="stock.picking" eval="(obj().env.ref('textile_manufacturing.purchase_order_1') + obj().env.ref('textile_manufacturing.purchase_order_3')).picking_ids.ids"/>
    </function>

    <record id="return_picking_wizard_1" model="stock.return.picking">
        <field name="picking_id" model="stock.picking" search="[('purchase_id', '=', ref('purchase_order_3'))]"/>
    </record>

    <record id="return_picking_line_1" model="stock.return.picking.line">
        <field name="wizard_id" ref="return_picking_wizard_1"/>
        <field name="product_id" ref="product_product_256"/>
        <field name="quantity">3.0</field>
    </record>

    <function model="stock.return.picking" name="action_create_returns">
        <value model="stock.return.picking" eval="obj().env.ref('textile_manufacturing.return_picking_wizard_1').id"/>
    </function>
</odoo>
