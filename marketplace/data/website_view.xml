<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="new_product_page" model="ir.ui.view">
        <field name="key">marketplace.new_product_page</field>
        <field name="name">New Product</field>
        <field name="type">qweb</field>
        <field name="active" eval="True"/>
        <field name="website_id" ref="website.default_website"/>
        <field name="arch" type="xml">
            <t name="New Product" t-name="website.new_product_page">
                <t t-call="website.layout">
                    <t t-set="logged_partner" t-value="request.env['website.visitor']._get_visitor_from_request().partner_id"/>
                    <t t-set="new_product_form_values" t-value="{
                            'name': request.params.get('name', ''),
                            'ecommerce_description': request.params.get('ecommerce_description', ''),
                            'barcode': request.params.get('barcode', ''),
                            'standard_price': request.params.get('standard_price', ''),
                            'list_price': request.params.get('list_price', ''),
                            'image_1920': request.params.get('image_1920', ''),
                        }"/>
                    <span class="hidden" data-for="new_product_form" t-att-data-values="new_product_form_values"/>
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1" data-name="Title">
                            <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/surveyor.s_banner_default_image'); background-position: 50% 0;"/>
                            <div class="o_we_bg_filter bg-black-50"/>
                            <div class="container">
                                <h1>Suggest a new product</h1>
                            </div>
                        </section>
                        <section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text" style="background-image: none;">
                            <div class="s_allow_columns container">
                                <div class="row">
                                    <div class="col-lg-8 mt-4 mt-lg-0 o_colored_level" style="">
                                        <section class="s_website_form" data-vcss="001" data-snippet="s_website_form" data-name="Form" style="">
                                            <div class="container">
                                                <form id="newproduct_form" action="/website/action/create_product/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="project.task" data-success-mode="redirect" data-success-page="/your-task-has-been-submitted" data-pre-fill="true">
                                                    <div class="s_website_form_rows row s_col_no_bgcolor">
                                                        <div class="s_website_form_field mb-3 col-12    s_website_form_required    " data-type="char" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="ocjvl2wnuhhm">
                                                                    <span class="s_website_form_label_content">Name</span>
                                                                    <span class="s_website_form_mark"> *</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <input type="text" class="form-control s_website_form_input" name="name" required="1" id="ocjvl2wnuhhm"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="s_website_form_field mb-3 col-12    s_website_form_required    " data-type="text" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="oqf5x972f6d">
                                                                    <span class="s_website_form_label_content">eCommerce Description</span>
                                                                    <span class="s_website_form_mark"> *</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <textarea class="form-control s_website_form_input" name="ecommerce_description" required="1" id="oqf5x972f6d" rows="3"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div data-visibility-condition="" data-visibility-between="" class="s_website_form_field mb-3 col-12" data-type="char" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="o3qcedslqnmr">
                                                                    <span class="s_website_form_label_content">Barcode</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <input type="text" class="form-control s_website_form_input" name="barcode" value="" placeholder="" id="o3qcedslqnmr" data-fill-with="commercial_company_name"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="char" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="oide2i4hgvel">
                                                                    <span class="s_website_form_label_content">Cost</span>
                                                                    <span class="s_website_form_mark"> *</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <input type="text" class="form-control s_website_form_input" name="standard_price" required="true" id="oide2i4hgvel"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="float" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="oide2i4hgvel">
                                                                    <span class="s_website_form_label_content">Sales price</span>
                                                                    <span class="s_website_form_mark"> *</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <input type="float" class="form-control s_website_form_input" name="list_price" required="true" id="oide2i4hgvel"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="binary" data-name="Field">
                                                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                                                <label class="col-form-label col-sm-auto s_website_form_label " style="width: 200px" for="oide2i4hgvel">
                                                                    <span class="s_website_form_label_content">Image</span>
                                                                </label>
                                                                <div class="col-sm">
                                                                    <input type="file" class="form-control s_website_form_input" name="image_1920" id="oide2i4hgvel"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                                                            <div style="width: 200px;" class="s_website_form_label"/>
                                                            <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send" data-bs-original-title="" title="">Submit</a>
                                                            <span id="s_website_form_result" class="text-danger ml8"/>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </section>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>
